<Window x:Class="CGEasy.App.Views.IncassoDialogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Incasso da Cliente" 
        Height="820" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="White">
    <Border Padding="25">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <TextBlock Grid.Row="0" Text="ðŸ“¥ Incasso da Cliente" FontSize="20" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,20"/>

            <!-- FORM -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/> <!-- Nuova riga per note -->
                </Grid.RowDefinitions>

                <!-- COLONNA 1 -->
                <StackPanel Grid.Row="0" Grid.Column="0">
                    <TextBlock Text="Nome Cliente *" Margin="0,0,0,5" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding NomeCliente, UpdateSourceTrigger=PropertyChanged}" Padding="8" Margin="0,0,0,15"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="0">
                    <TextBlock Text="Mese (1-12)" Margin="0,0,0,5" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding Mese, UpdateSourceTrigger=PropertyChanged}" Padding="8" Margin="0,0,0,15"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="0">
                    <TextBlock Text="Data Scadenza *" Margin="0,0,0,5" FontWeight="SemiBold"/>
                    <DatePicker SelectedDate="{Binding DataScadenza}" Padding="8" Margin="0,0,0,15"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="2">
                    <TextBlock Text="Data Incasso Effettivo" Margin="0,0,0,5" FontWeight="SemiBold"/>
                    <DatePicker SelectedDate="{Binding DataIncassoEffettivo}" Padding="8" Margin="0,0,0,15"/>
                </StackPanel>

                <!-- COLONNA 2 -->
                <StackPanel Grid.Row="0" Grid.Column="2">
                    <TextBlock Text="Anno" Margin="0,0,0,5" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding Anno, UpdateSourceTrigger=PropertyChanged}" Padding="8" Margin="0,0,0,15"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="2">
                    <TextBlock Text="Importo Fattura (â‚¬) *" Margin="0,0,0,5" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding Importo, UpdateSourceTrigger=PropertyChanged}" Padding="8" Margin="0,0,0,15"/>
                </StackPanel>

                <!-- CAMPI FATTURA CLIENTE -->
                <StackPanel Grid.Row="3" Grid.Column="0">
                    <TextBlock Text="Numero Fattura Cliente" Margin="0,0,0,5" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding NumeroFatturaCliente, UpdateSourceTrigger=PropertyChanged}" Padding="8" Margin="0,0,0,15"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="2">
                    <TextBlock Text="Data Fattura Cliente" Margin="0,0,0,5" FontWeight="SemiBold"/>
                    <DatePicker SelectedDate="{Binding DataFatturaCliente}" Padding="8" Margin="0,0,0,15"/>
                </StackPanel>

                <!-- RIGA 4: % ANTICIPO E IMPORTO ANTICIPATO -->
                <StackPanel Grid.Row="4" Grid.Column="0">
                    <TextBlock Text="% Anticipo" Margin="0,0,0,5" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding PercentualeAnticipo, UpdateSourceTrigger=PropertyChanged}" Padding="8" Margin="0,0,0,15"/>
                </StackPanel>

                <StackPanel Grid.Row="4" Grid.Column="2">
                    <TextBlock Text="Importo Fattura Anticipato (â‚¬)" Margin="0,0,0,5" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding ImportoAnticipato, StringFormat=N2}" IsReadOnly="True" 
                             Padding="8" Margin="0,0,0,15" Background="#F0F0F0"/>
                </StackPanel>

                <!-- RIGA 5: IMPORTO FATTURA A SCADENZA -->
                <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3">
                    <TextBlock Text="Importo Fattura a Scadenza (â‚¬)" Margin="0,0,0,5" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding ImportoFatturaScadenza, StringFormat=N2}" IsReadOnly="True" 
                             Padding="8" Margin="0,0,0,15" Background="#F0F0F0"/>
                </StackPanel>

                <!-- RIGA 6: DATA INIZIO ANTICIPO E CHECKBOX OK C/C -->
                <StackPanel Grid.Row="6" Grid.Column="0">
                    <TextBlock Text="Data Inizio Anticipo" Margin="0,0,0,5" FontWeight="SemiBold"/>
                    <DatePicker SelectedDate="{Binding DataInizioAnticipo}" Padding="8" Margin="0,0,0,15"/>
                </StackPanel>

                <StackPanel Grid.Row="6" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,0,15">
                    <CheckBox IsChecked="{Binding AnticipoGestito_CC, UpdateSourceTrigger=PropertyChanged}" 
                              VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="OK C/C (gestito in C/C)" FontWeight="SemiBold" VerticalAlignment="Center" 
                               Foreground="#27AE60" ToolTip="Anticipo gestito tramite C/C, non visibile in Saldo Previsto"/>
                </StackPanel>

                <!-- RIGA 7: DATA SCADENZA ANTICIPO E CHECKBOX OK C/C CHIUSO ANT -->
                <StackPanel Grid.Row="7" Grid.Column="0">
                    <TextBlock Text="Data Scadenza Anticipo" Margin="0,0,0,5" FontWeight="SemiBold"/>
                    <DatePicker SelectedDate="{Binding DataScadenzaAnticipo}" Padding="8" Margin="0,0,0,15"/>
                </StackPanel>

                <StackPanel Grid.Row="7" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,0,15">
                    <CheckBox IsChecked="{Binding AnticipoChiuso_CC, UpdateSourceTrigger=PropertyChanged}" 
                              VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="OK C/C chiuso Ant" FontWeight="SemiBold" VerticalAlignment="Center" 
                               Foreground="#FF9800" ToolTip="Anticipo chiuso tramite C/C, storno non visibile in Saldo Previsto"/>
                </StackPanel>

                <!-- CHECKBOX INCASSATO -->
                <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <CheckBox IsChecked="{Binding Incassato, UpdateSourceTrigger=PropertyChanged}" 
                              VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Incassato" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- NOTE (FULL WIDTH) -->
                <StackPanel Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="3">
                    <TextBlock Text="Note" Margin="0,5,0,5" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding Note, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="8" Height="60" TextWrapping="Wrap" AcceptsReturn="True" 
                             VerticalScrollBarVisibility="Auto" FontSize="13"/>
                </StackPanel>
            </Grid>

            <!-- PULSANTI -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="ðŸ’¾ Salva" Command="{Binding SalvaCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Padding="20,10" Margin="0,0,10,0" Background="#27AE60" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                <Button Content="âŒ Annulla" Command="{Binding AnnullaCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Padding="20,10" Background="#95A5A6" Foreground="White" BorderThickness="0" Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

