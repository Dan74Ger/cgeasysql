<UserControl x:Class="CGEasy.App.Views.BilancioTemplateDettaglioView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Converter per colori differenza -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header con info template -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20,15">
            <StackPanel>
                <TextBlock Text="ðŸ“Š TEMPLATE RICLASSIFICAZIONE - DETTAGLIO" 
                           FontSize="20" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="{Binding HeaderInfo}" 
                           FontSize="14" Foreground="White" Opacity="0.9" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Toolbar azioni -->
        <Border Grid.Row="1" Background="White" Padding="15" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="âž• Nuova Riga" 
                        Command="{Binding NuovaRigaCommand}"
                        Background="#4CAF50" Foreground="White"
                        Padding="15,8" Margin="0,0,10,0" FontSize="13"/>
                
                <Button Content="ðŸ’¾ Salva Modifiche" 
                        Command="{Binding SalvaCommand}"
                        Background="#2196F3" Foreground="White"
                        Padding="15,8" Margin="0,0,10,0" FontSize="13"/>
                
                <Button Content="ðŸ—‘ï¸ Elimina Riga" 
                        Command="{Binding EliminaRigaCommand}"
                        Background="#F44336" Foreground="White"
                        Padding="15,8" Margin="0,0,10,0" FontSize="13"/>
                
                <Button Content="ðŸ“Š Export Excel" 
                        Command="{Binding ExportExcelCommand}"
                        Background="#FF9800" Foreground="White"
                        Padding="15,8" FontSize="13"/>

                <!-- Info righe -->
                <TextBlock Text="{Binding NumeroRighe, StringFormat='Righe: {0}'}"
                           VerticalAlignment="Center" Margin="20,0,0,0"
                           FontSize="13" FontWeight="SemiBold" Foreground="#666"/>
            </StackPanel>
        </Border>

        <!-- DataGrid con 6 colonne -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding Righe}"
                  SelectedItem="{Binding RigaSelezionata, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  SelectionMode="Single"
                  IsReadOnly="False"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  RowHeight="40"
                  FontSize="13"
                  AlternatingRowBackground="#F9F9F9"
                  CellEditEnding="DataGrid_CellEditEnding">

            <DataGrid.Resources>
                <!-- Style globale per tutte le celle della riga -->
                <Style TargetType="DataGridCell">
                    <Style.Triggers>
                        <!-- âœ… Testo ROSSO se importo calcolato negativo -->
                        <DataTrigger Binding="{Binding IsTestoRosso}" Value="True">
                            <Setter Property="Foreground" Value="#F44336"/>
                        </DataTrigger>
                        <!-- âš« Testo NERO se importo calcolato positivo -->
                        <DataTrigger Binding="{Binding IsTestoRosso}" Value="False">
                            <Setter Property="Foreground" Value="Black"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
                
                <!-- Style per righe -->
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <!-- PRIORITÃ€ 1: Riga con differenza â†’ sfondo rosso chiaro -->
                        <DataTrigger Binding="{Binding HasDifferenza}" Value="True">
                            <Setter Property="Background" Value="#FFEBEE"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </DataTrigger>
                        
                        <!-- PRIORITÃ€ 2: Riga con formula â†’ testo GRASSETTO -->
                        <DataTrigger Binding="{Binding HasFormula}" Value="True">
                            <Setter Property="FontWeight" Value="Bold"/>
                        </DataTrigger>
                    </Style.Triggers>
                    
                    <!-- Handler per doppio click su riga -->
                    <EventSetter Event="MouseDoubleClick" Handler="DataGridRow_MouseDoubleClick"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <!-- 1. Codice - EDITABILE -->
                <DataGridTextColumn Header="Codice" 
                                    Binding="{Binding CodiceMastrino, UpdateSourceTrigger=PropertyChanged}"
                                    Width="100"
                                    FontFamily="Consolas"
                                    FontWeight="Bold">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#2196F3"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <!-- 2. Descrizione - EDITABILE -->
                <DataGridTextColumn Header="Descrizione" 
                                    Binding="{Binding DescrizioneMastrino, UpdateSourceTrigger=PropertyChanged}"
                                    Width="300">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#2196F3"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <!-- 3. Importo originale - EDITABILE -->
                <DataGridTextColumn Header="Importo" 
                                    Binding="{Binding Importo, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}"
                                    Width="120">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#2196F3"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="HorizontalContentAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="FontFamily" Value="Consolas"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- 4. Segno +/- - EDITABILE con ComboBox -->
                <DataGridComboBoxColumn Header="Segno" 
                                        SelectedValueBinding="{Binding Segno, UpdateSourceTrigger=PropertyChanged}"
                                        Width="70">
                    <DataGridComboBoxColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#4CAF50"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGridComboBoxColumn.HeaderStyle>
                    <DataGridComboBoxColumn.ElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemsSource">
                                <Setter.Value>
                                    <x:Array Type="{x:Type system:String}">
                                        <system:String>+</system:String>
                                        <system:String>-</system:String>
                                    </x:Array>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="FontSize" Value="18"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </DataGridComboBoxColumn.ElementStyle>
                    <DataGridComboBoxColumn.EditingElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemsSource">
                                <Setter.Value>
                                    <x:Array Type="{x:Type system:String}">
                                        <system:String>+</system:String>
                                        <system:String>-</system:String>
                                    </x:Array>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="FontSize" Value="18"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </DataGridComboBoxColumn.EditingElementStyle>
                </DataGridComboBoxColumn>

                <!-- 5. Formula - EDITABILE -->
                <DataGridTextColumn Header="Formula" 
                                    Binding="{Binding Formula, UpdateSourceTrigger=PropertyChanged}"
                                    Width="200">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#FF9800"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontFamily" Value="Consolas"/>
                            <Setter Property="FontStyle" Value="Italic"/>
                            <Setter Property="Foreground" Value="#FF6F00"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="FontFamily" Value="Consolas"/>
                            <Setter Property="Foreground" Value="#FF6F00"/>
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                </DataGridTextColumn>

                <!-- 6. Importo Calcolato - READONLY -->
                <DataGridTextColumn Header="Importo Calcolato" 
                                    Binding="{Binding ImportoCalcolato, StringFormat=N2}"
                                    Width="150"
                                    IsReadOnly="True">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#9C27B0"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="HorizontalContentAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="FontFamily" Value="Consolas"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <!-- Rimossi i trigger: il colore viene ereditato dalla riga! -->
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>

        <!-- Overlay Loading -->
        <Border Grid.RowSpan="3" 
                Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ui:ProgressRing IsActive="True" Width="60" Height="60"/>
                <TextBlock Text="Caricamento..." 
                           Foreground="White" 
                           FontSize="16" 
                           Margin="0,20,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
