<Window x:Class="CGEasy.App.Views.CambioPasswordDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d" 
        Title="Cambio Password" 
        Height="550" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#ecf0f1">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackPanel Grid.Row="0" Margin="0,0,0,25">
            <TextBlock Text="ðŸ”‘ Cambio Password" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Foreground="#2c3e50"/>
            <TextBlock x:Name="SubtitleTextBlock"
                      Text="Modifica la password dell'utente" 
                      FontSize="13" 
                      Foreground="#7f8c8d" 
                      Margin="0,5,0,0"/>
        </StackPanel>

        <!-- FORM -->
        <StackPanel Grid.Row="1">
            <!-- Username (readonly) -->
            <TextBlock Text="Utente" 
                      FontSize="13" 
                      FontWeight="SemiBold" 
                      Foreground="#2c3e50" 
                      Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox" 
                    Padding="12,10" 
                    FontSize="14"
                    IsReadOnly="True"
                    Background="#ecf0f1"
                    Margin="0,0,0,20"/>

            <!-- Vecchia Password (solo per cambio propria password) -->
            <StackPanel x:Name="OldPasswordPanel" Visibility="Visible">
                <TextBlock Text="Vecchia Password *" 
                          FontSize="13" 
                          FontWeight="SemiBold" 
                          Foreground="#2c3e50" 
                          Margin="0,0,0,5"/>
                <PasswordBox x:Name="OldPasswordBox" 
                            Padding="12,10" 
                            FontSize="14"
                            Margin="0,0,0,20"/>
            </StackPanel>

            <!-- Nuova Password -->
            <TextBlock Text="Nuova Password *" 
                      FontSize="13" 
                      FontWeight="SemiBold" 
                      Foreground="#2c3e50" 
                      Margin="0,0,0,5"/>
            <PasswordBox x:Name="NewPasswordBox" 
                        Padding="12,10" 
                        FontSize="14"
                        Margin="0,0,0,5"/>
            <TextBlock Text="Minimo 6 caratteri" 
                      FontSize="11" 
                      Foreground="#95a5a6" 
                      Margin="0,0,0,20"/>

            <!-- Conferma Password -->
            <TextBlock Text="Conferma Nuova Password *" 
                      FontSize="13" 
                      FontWeight="SemiBold" 
                      Foreground="#2c3e50" 
                      Margin="0,0,0,5"/>
            <PasswordBox x:Name="ConfirmPasswordBox" 
                        Padding="12,10" 
                        FontSize="14"
                        Margin="0,0,0,5"/>
        </StackPanel>

        <!-- BUTTONS -->
        <Grid Grid.Row="2" Margin="0,25,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" 
                   Content="âŒ Annulla" 
                   Click="CancelButton_Click"
                   Background="#95a5a6" 
                   Foreground="White" 
                   Padding="15,12" 
                   FontSize="14" 
                   FontWeight="SemiBold"
                   BorderThickness="0"
                   Cursor="Hand"
                   Margin="0,0,10,0">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="Background" Value="#95a5a6"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7f8c8d"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Grid.Column="1" 
                   Content="âœ… Cambia Password" 
                   Click="SaveButton_Click"
                   Background="#f39c12" 
                   Foreground="White" 
                   Padding="15,12" 
                   FontSize="14" 
                   FontWeight="SemiBold"
                   BorderThickness="0"
                   Cursor="Hand"
                   Margin="10,0,0,0">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="Background" Value="#f39c12"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#e67e22"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Grid>
</Window>

