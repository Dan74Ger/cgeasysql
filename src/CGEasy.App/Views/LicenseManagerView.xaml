<Window x:Class="CGEasy.App.Views.LicenseManagerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:vm="clr-namespace:CGEasy.App.ViewModels"
        Title="ðŸ”‘ Gestione Licenze Clienti" 
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        ui:WindowHelper.UseModernWindowStyle="True"
        Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}">

    <Window.Resources>
        <!-- Converter per visibilitÃ  quando null -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- COLONNA SINISTRA: CLIENTI -->
        <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header Clienti -->
                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                    <TextBlock Text="ðŸ‘¥ CLIENTI LICENZE" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    
                    <!-- Statistiche -->
                    <StackPanel Orientation="Horizontal">
                        <Border Background="#2196F3" CornerRadius="4" Padding="8,4" Margin="0,0,5,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ‘¥" FontSize="14" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding TotalClients}" Foreground="White" FontWeight="Bold"/>
                                <TextBlock Text=" Clienti" Foreground="White" FontSize="11" Margin="2,0,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#4CAF50" CornerRadius="4" Padding="8,4" Margin="0,0,5,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ”‘" FontSize="14" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding ActiveKeys}" Foreground="White" FontWeight="Bold"/>
                                <TextBlock Text=" Attive" Foreground="White" FontSize="11" Margin="2,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!-- Ricerca -->
                <TextBox Grid.Row="1" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         ui:ControlHelper.PlaceholderText="ðŸ” Cerca cliente..."
                         Height="36" Margin="0,0,0,10"/>

                <!-- Lista Clienti -->
                <DataGrid Grid.Row="2" ItemsSource="{Binding Clients}"
                          SelectedItem="{Binding SelectedClient}"
                          AutoGenerateColumns="False" IsReadOnly="True"
                          SelectionMode="Single" CanUserAddRows="False"
                          GridLinesVisibility="None" HeadersVisibility="Column"
                          RowHeight="45" AlternatingRowBackground="#F5F5F5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Cliente" Binding="{Binding NomeCliente}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontSize" Value="11"/>
                                    <Setter Property="Foreground" Value="#666"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Pulsanti Clienti -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="âž• Nuovo" Command="{Binding NewClientCommand}"
                            Height="36" Padding="15,0" Margin="0,0,5,0"
                            Background="#4CAF50" Foreground="White"/>
                    <Button Content="âœï¸ Modifica" Command="{Binding EditClientCommand}"
                            Height="36" Padding="15,0" Margin="0,0,5,0"/>
                    <Button Content="ðŸ—‘ï¸ Elimina" Command="{Binding DeleteClientCommand}"
                            Height="36" Padding="15,0"
                            Background="#F44336" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- COLONNA DESTRA: CHIAVI CLIENTE SELEZIONATO -->
        <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header Chiavi -->
                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                    <TextBlock FontSize="18" FontWeight="Bold" Margin="0,0,0,10">
                        <Run Text="ðŸ”‘ CHIAVI LICENZA"/>
                        <Run Text="-" Foreground="#999"/>
                        <Run Text="{Binding SelectedClient.NomeCliente, FallbackValue='Seleziona un cliente'}" 
                             Foreground="#2196F3"/>
                    </TextBlock>
                    
                    <TextBlock Text="Seleziona un cliente dalla lista per visualizzare le sue licenze"
                               Foreground="#999" FontSize="12">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedClient}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <!-- Pulsanti Genera Chiavi -->
                <StackPanel Grid.Row="1" Margin="0,0,0,15">
                    <TextBlock Text="Genera Nuova Chiave:" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <WrapPanel>
                        <Button Content="ðŸ“ TODO-STUDIO" Command="{Binding GenerateKeyCommand}" 
                                CommandParameter="TODO-STUDIO"
                                Height="40" Padding="12,0" Margin="0,0,10,10"
                                Background="#2196F3" Foreground="White" FontWeight="SemiBold"/>
                        <Button Content="ðŸ’° BILANCI" Command="{Binding GenerateKeyCommand}"
                                CommandParameter="BILANCI"
                                Height="40" Padding="12,0" Margin="0,0,10,10"
                                Background="#4CAF50" Foreground="White" FontWeight="SemiBold"/>
                        <Button Content="ðŸ“¢ CIRCOLARI" Command="{Binding GenerateKeyCommand}"
                                CommandParameter="CIRCOLARI"
                                Height="40" Padding="12,0" Margin="0,0,10,10"
                                Background="#FF9800" Foreground="White" FontWeight="SemiBold"/>
                        <Button Content="ðŸ“Š CONTROLLO-GESTIONE" Command="{Binding GenerateKeyCommand}"
                                CommandParameter="CONTROLLO-GESTIONE"
                                Height="40" Padding="12,0" Margin="0,0,10,10"
                                Background="#9C27B0" Foreground="White" FontWeight="SemiBold"/>
                    </WrapPanel>
                </StackPanel>

                <!-- DataGrid Chiavi -->
                <DataGrid Grid.Row="2" ItemsSource="{Binding SelectedClientKeys}"
                          AutoGenerateColumns="False" IsReadOnly="True"
                          CanUserAddRows="False" GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column" RowHeight="60"
                          AlternatingRowBackground="#F9F9F9">
                    <DataGrid.Columns>
                        <!-- Modulo -->
                        <DataGridTextColumn Header="Modulo" Binding="{Binding ModuleName}" Width="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontSize" Value="13"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Chiave -->
                        <DataGridTextColumn Header="Chiave Licenza" Binding="{Binding FullKey}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontFamily" Value="Consolas"/>
                                    <Setter Property="FontSize" Value="11"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Data -->
                        <DataGridTextColumn Header="Data" Binding="{Binding DataGenerazione, StringFormat='dd/MM/yyyy HH:mm'}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontSize" Value="11"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Durata -->
                        <DataGridTextColumn Header="Durata" Binding="{Binding DurataDisplay}" Width="110">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontSize" Value="11"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="#2196F3"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Scadenza -->
                        <DataGridTemplateColumn Header="Scadenza" Width="110">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock VerticalAlignment="Center" FontSize="11" HorizontalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="{Binding DataScadenza, StringFormat='dd/MM/yyyy'}"/>
                                                <Setter Property="Foreground" Value="#666"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataScadenza}" Value="{x:Null}">
                                                        <Setter Property="Text" Value="â€”"/>
                                                        <Setter Property="Foreground" Value="#999"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsExpired}" Value="True">
                                                        <Setter Property="Foreground" Value="#F44336"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Stato -->
                        <DataGridTemplateColumn Header="Stato" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="4" Padding="6,3" HorizontalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                        <Setter Property="Background" Value="#4CAF50"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                        <Setter Property="Background" Value="#F44336"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Foreground="White" FontWeight="Bold" FontSize="10">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                            <Setter Property="Text" Value="âœ… ATTIVA"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                            <Setter Property="Text" Value="âŒ REVOCATA"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Azioni -->
                        <DataGridTemplateColumn Header="Azioni" Width="250">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="â±ï¸" Command="{Binding DataContext.EditDurataCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Modifica durata"
                                                Width="30" Height="30" Margin="2" FontSize="14"
                                                Background="#2196F3" Foreground="White"/>
                                        <Button Content="ðŸ“‹" Command="{Binding DataContext.CopyKeyCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Copia chiave"
                                                Width="30" Height="30" Margin="2" FontSize="14"/>
                                        <Button Content="ðŸš«" Command="{Binding DataContext.RevokeKeyCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Revoca chiave"
                                                Width="30" Height="30" Margin="2" FontSize="14"
                                                IsEnabled="{Binding IsActive}"/>
                                        <Button Content="ðŸ—‘ï¸" Command="{Binding DataContext.DeleteKeyCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Elimina definitivamente"
                                                Width="30" Height="30" Margin="2" FontSize="14"
                                                Background="#F44336" Foreground="White"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Window>

