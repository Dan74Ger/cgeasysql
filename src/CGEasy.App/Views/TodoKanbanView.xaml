<Window x:Class="CGEasy.App.Views.TodoKanbanView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:local="clr-namespace:CGEasy.App.Views"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="ðŸ“‹ TODO Studio - Vista Kanban"
        Width="1600" Height="900"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}">

    <Window.Resources>
        <!-- Converter per visibilitÃ  basata su count -->
        <local:CountToVisibilityConverter x:Key="CountToVisibility"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Toolbar filtri -->
            <RowDefinition Height="Auto"/> <!-- Statistiche -->
            <RowDefinition Height="*"/>    <!-- Kanban board -->
        </Grid.RowDefinitions>

        <!-- ===== TOOLBAR FILTRI ===== -->
        <Border Grid.Row="0" Background="White" Padding="15" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <StackPanel>
                <!-- Riga 1: Ricerca e pulsanti azione -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             ui:ControlHelper.PlaceholderText="ðŸ” Cerca TODO per titolo, descrizione, cliente..."
                             Height="36" FontSize="13"/>

                    <Button Grid.Column="2" Content="ðŸ”„ Ripristina Filtri" 
                            Command="{Binding ResetFiltersCommand}"
                            Height="36" Padding="15,0" FontSize="12"
                            Background="#9E9E9E" Foreground="White"/>

                    <Button Grid.Column="4" Content="âž• Nuovo TODO" 
                            Command="{Binding NewTodoCommand}"
                            Height="36" Padding="15,0" FontSize="12"
                            Background="#4CAF50" Foreground="White" FontWeight="SemiBold"/>
                </Grid>

                <!-- Riga 2: Filtri dropdown -->
                <StackPanel Orientation="Horizontal">
                    <!-- Professionista -->
                    <ComboBox ItemsSource="{Binding Professionisti}"
                              SelectedItem="{Binding SelectedProfessionista}"
                              Width="200" Height="32" Margin="0,0,10,0">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Run Text="{Binding Cognome, Mode=OneWay}"/>
                                    <Run Text=" "/>
                                    <Run Text="{Binding Nome, Mode=OneWay}"/>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                        <ComboBox.Style>
                            <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                                <Setter Property="ui:ControlHelper.PlaceholderText" Value="ðŸ‘¤ Professionista"/>
                            </Style>
                        </ComboBox.Style>
                    </ComboBox>

                    <!-- Tipo Pratica -->
                    <ComboBox ItemsSource="{Binding TipiPratica}"
                              SelectedItem="{Binding SelectedTipoPratica}"
                              DisplayMemberPath="NomePratica"
                              Width="150" Height="32" Margin="0,0,10,0">
                        <ComboBox.Style>
                            <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                                <Setter Property="ui:ControlHelper.PlaceholderText" Value="ðŸ“‹ Tipo Pratica"/>
                            </Style>
                        </ComboBox.Style>
                    </ComboBox>

                    <!-- Cliente -->
                    <ComboBox ItemsSource="{Binding Clienti}"
                              SelectedItem="{Binding SelectedCliente}"
                              DisplayMemberPath="NomeCliente"
                              Width="200" Height="32" Margin="0,0,10,0">
                        <ComboBox.Style>
                            <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                                <Setter Property="ui:ControlHelper.PlaceholderText" Value="ðŸ¢ Cliente"/>
                            </Style>
                        </ComboBox.Style>
                    </ComboBox>

                    <!-- Categoria -->
                    <ComboBox ItemsSource="{Binding Categorie}"
                              SelectedItem="{Binding SelectedCategoria}"
                              Width="150" Height="32" Margin="0,0,10,0">
                        <ComboBox.Style>
                            <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                                <Setter Property="ui:ControlHelper.PlaceholderText" Value="ðŸ“‚ Categoria"/>
                            </Style>
                        </ComboBox.Style>
                    </ComboBox>

                    <!-- PrioritÃ  -->
                    <ComboBox ItemsSource="{Binding Priorita}"
                              SelectedItem="{Binding SelectedPriorita}"
                              Width="150" Height="32">
                        <ComboBox.Style>
                            <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                                <Setter Property="ui:ControlHelper.PlaceholderText" Value="âš¡ PrioritÃ "/>
                            </Style>
                        </ComboBox.Style>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- ===== STATISTICHE ===== -->
        <Border Grid.Row="1" Background="#F5F5F5" Padding="15,10" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Total -->
                <Border Background="#2196F3" CornerRadius="15" Padding="15,8" Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“Š Totale:" Foreground="White" FontSize="12" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding TotalTodos}" Foreground="White" FontWeight="Bold" FontSize="14"/>
                    </StackPanel>
                </Border>

                <!-- Da Fare -->
                <Border Background="#9E9E9E" CornerRadius="15" Padding="15,8" Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“ Da Fare:" Foreground="White" FontSize="12" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding CountDaFare}" Foreground="White" FontWeight="Bold" FontSize="14"/>
                    </StackPanel>
                </Border>

                <!-- In Corso -->
                <Border Background="#2196F3" CornerRadius="15" Padding="15,8" Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âš™ï¸ In Corso:" Foreground="White" FontSize="12" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding CountInCorso}" Foreground="White" FontWeight="Bold" FontSize="14"/>
                    </StackPanel>
                </Border>

                <!-- Completata -->
                <Border Background="#4CAF50" CornerRadius="15" Padding="15,8" Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âœ… Completata:" Foreground="White" FontSize="12" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding CountCompletata}" Foreground="White" FontWeight="Bold" FontSize="14"/>
                    </StackPanel>
                </Border>

                <!-- Annullata -->
                <Border Background="#F44336" CornerRadius="15" Padding="15,8" Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âŒ Annullata:" Foreground="White" FontSize="12" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding CountAnnullata}" Foreground="White" FontWeight="Bold" FontSize="14"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- ===== KANBAN BOARD (4 COLONNE) ===== -->
        <Grid Grid.Row="2" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- COLONNA 1: DA FARE -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1">
                <DockPanel>
                    <!-- Header colonna -->
                    <Border DockPanel.Dock="Top" Background="#9E9E9E" CornerRadius="8,8,0,0" Padding="15">
                        <StackPanel>
                            <TextBlock Text="ðŸ“ DA FARE" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding CountDaFare, StringFormat='{}{0} tasks'}" 
                                       FontSize="12" Foreground="White" HorizontalAlignment="Center" Margin="0,3,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Lista TODO -->
                    <Grid AllowDrop="True"
                          Drop="Column_Drop"
                          DragEnter="Column_DragEnter"
                          DragLeave="Column_DragLeave"
                          Tag="DaFare"
                          Background="Transparent">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                            <ItemsControl ItemsSource="{Binding TodosDaFare}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" 
                                                BorderThickness="2" 
                                                CornerRadius="6" 
                                                Padding="12" 
                                                Margin="0,0,0,10"
                                                Cursor="Hand"
                                                MouseLeftButtonDown="Todo_MouseLeftButtonDown"
                                                PreviewMouseMove="Todo_PreviewMouseMove"
                                                Tag="{Binding}">
                                            <!-- Bordo prioritÃ  -->
                                            <Border.BorderBrush>
                                                <SolidColorBrush Color="{Binding ColorePriorita}"/>
                                            </Border.BorderBrush>

                                        <Border.InputBindings>
                                            <MouseBinding Gesture="LeftDoubleClick" 
                                                          Command="{Binding DataContext.EditTodoCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                          CommandParameter="{Binding}"/>
                                        </Border.InputBindings>

                                        <StackPanel>
                                            <!-- Titolo + PrioritÃ  -->
                                            <Grid Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="{Binding Titolo}" 
                                                           FontWeight="Bold" FontSize="14" TextWrapping="Wrap"/>

                                                <Border Grid.Column="1" CornerRadius="10" Padding="8,4" Margin="5,0,0,0">
                                                    <Border.Background>
                                                        <SolidColorBrush Color="{Binding ColorePriorita}"/>
                                                    </Border.Background>
                                                    <TextBlock Text="{Binding IconaPriorita}" Foreground="White" FontSize="10" FontWeight="Bold"/>
                                                </Border>
                                            </Grid>

                                            <!-- Categoria -->
                                            <TextBlock Text="{Binding TestoCategoria}" FontSize="11" Foreground="#666" Margin="0,0,0,5"/>

                                            <!-- Cliente -->
                                            <TextBlock Text="{Binding ClienteNome, StringFormat='ðŸ¢ {0}'}" 
                                                       FontSize="11" Foreground="#2196F3" Margin="0,0,0,5"
                                                       Visibility="{Binding ClienteNome, Converter={StaticResource CountToVisibility}}"/>

                                            <!-- Tipo Pratica -->
                                            <TextBlock Text="{Binding TipoPraticaNome, StringFormat='ðŸ“‹ {0}'}" 
                                                       FontSize="11" Foreground="#FF9800" Margin="0,0,0,5"
                                                       Visibility="{Binding TipoPraticaNome, Converter={StaticResource CountToVisibility}}"/>

                                            <!-- Professionisti -->
                                            <TextBlock Text="{Binding ProfessionistiAssegnatiText, StringFormat='ðŸ‘¤ {0}'}" 
                                                       FontSize="11" Foreground="#666" Margin="0,0,0,5"
                                                       TextWrapping="Wrap"/>

                                            <!-- Data Scadenza -->
                                            <Border CornerRadius="4" Padding="6,3" Margin="0,5,0,0" HorizontalAlignment="Left">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#E0E0E0"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsScaduto}" Value="True">
                                                                <Setter Property="Background" Value="#F44336"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock FontSize="10" FontWeight="Bold">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#666"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsScaduto}" Value="True">
                                                                    <Setter Property="Foreground" Value="White"/>
                                                                    <Setter Property="Text" Value="{Binding DataScadenza, StringFormat='âš ï¸ SCADUTO {0:dd/MM/yyyy}'}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsScaduto}" Value="False">
                                                                    <Setter Property="Text" Value="{Binding DataScadenza, StringFormat='ðŸ“… {0:dd/MM/yyyy}'}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </DockPanel>
        </Border>

        <!-- COLONNA 2: IN CORSO -->
            <Border Grid.Column="2" Background="White" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1">
                <DockPanel>
                    <Border DockPanel.Dock="Top" Background="#2196F3" CornerRadius="8,8,0,0" Padding="15">
                        <StackPanel>
                            <TextBlock Text="âš™ï¸ IN CORSO" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding CountInCorso, StringFormat='{}{0} tasks'}" 
                                       FontSize="12" Foreground="White" HorizontalAlignment="Center" Margin="0,3,0,0"/>
                        </StackPanel>
                    </Border>

                    <Grid AllowDrop="True"
                          Drop="Column_Drop"
                          DragEnter="Column_DragEnter"
                          DragLeave="Column_DragLeave"
                          Tag="InCorso"
                          Background="Transparent">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                            <ItemsControl ItemsSource="{Binding TodosInCorso}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" 
                                                BorderThickness="2" 
                                                CornerRadius="6" 
                                                Padding="12" 
                                                Margin="0,0,0,10"
                                                Cursor="Hand"
                                                MouseLeftButtonDown="Todo_MouseLeftButtonDown"
                                                PreviewMouseMove="Todo_PreviewMouseMove"
                                                Tag="{Binding}">
                                            <Border.BorderBrush>
                                                <SolidColorBrush Color="{Binding ColorePriorita}"/>
                                            </Border.BorderBrush>

                                        <Border.InputBindings>
                                            <MouseBinding Gesture="LeftDoubleClick" 
                                                          Command="{Binding DataContext.EditTodoCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                          CommandParameter="{Binding}"/>
                                        </Border.InputBindings>

                                        <StackPanel>
                                            <Grid Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="{Binding Titolo}" 
                                                           FontWeight="Bold" FontSize="14" TextWrapping="Wrap"/>

                                                <Border Grid.Column="1" CornerRadius="10" Padding="8,4" Margin="5,0,0,0">
                                                    <Border.Background>
                                                        <SolidColorBrush Color="{Binding ColorePriorita}"/>
                                                    </Border.Background>
                                                    <TextBlock Text="{Binding IconaPriorita}" Foreground="White" FontSize="10" FontWeight="Bold"/>
                                                </Border>
                                            </Grid>

                                            <TextBlock Text="{Binding TestoCategoria}" FontSize="11" Foreground="#666" Margin="0,0,0,5"/>

                                            <TextBlock Text="{Binding ClienteNome, StringFormat='ðŸ¢ {0}'}" 
                                                       FontSize="11" Foreground="#2196F3" Margin="0,0,0,5"
                                                       Visibility="{Binding ClienteNome, Converter={StaticResource CountToVisibility}}"/>

                                            <TextBlock Text="{Binding TipoPraticaNome, StringFormat='ðŸ“‹ {0}'}" 
                                                       FontSize="11" Foreground="#FF9800" Margin="0,0,0,5"
                                                       Visibility="{Binding TipoPraticaNome, Converter={StaticResource CountToVisibility}}"/>

                                            <TextBlock Text="{Binding ProfessionistiAssegnatiText, StringFormat='ðŸ‘¤ {0}'}" 
                                                       FontSize="11" Foreground="#666" Margin="0,0,0,5"
                                                       TextWrapping="Wrap"/>

                                            <Border CornerRadius="4" Padding="6,3" Margin="0,5,0,0" HorizontalAlignment="Left">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#E0E0E0"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsScaduto}" Value="True">
                                                                <Setter Property="Background" Value="#F44336"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock FontSize="10" FontWeight="Bold">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#666"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsScaduto}" Value="True">
                                                                    <Setter Property="Foreground" Value="White"/>
                                                                    <Setter Property="Text" Value="{Binding DataScadenza, StringFormat='âš ï¸ SCADUTO {0:dd/MM/yyyy}'}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsScaduto}" Value="False">
                                                                    <Setter Property="Text" Value="{Binding DataScadenza, StringFormat='ðŸ“… {0:dd/MM/yyyy}'}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </DockPanel>
        </Border>

        <!-- COLONNA 3: COMPLETATA -->
            <Border Grid.Column="4" Background="White" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1">
                <DockPanel>
                    <Border DockPanel.Dock="Top" Background="#4CAF50" CornerRadius="8,8,0,0" Padding="15">
                        <StackPanel>
                            <TextBlock Text="âœ… COMPLETATA" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding CountCompletata, StringFormat='{}{0} tasks'}" 
                                       FontSize="12" Foreground="White" HorizontalAlignment="Center" Margin="0,3,0,0"/>
                        </StackPanel>
                    </Border>

                    <Grid AllowDrop="True"
                          Drop="Column_Drop"
                          DragEnter="Column_DragEnter"
                          DragLeave="Column_DragLeave"
                          Tag="Completata"
                          Background="Transparent">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                            <ItemsControl ItemsSource="{Binding TodosCompletata}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" 
                                                BorderThickness="2" 
                                                CornerRadius="6" 
                                                Padding="12" 
                                                Margin="0,0,0,10"
                                                Cursor="Hand"
                                                MouseLeftButtonDown="Todo_MouseLeftButtonDown"
                                                PreviewMouseMove="Todo_PreviewMouseMove"
                                                Tag="{Binding}">
                                            <Border.BorderBrush>
                                                <SolidColorBrush Color="{Binding ColorePriorita}"/>
                                            </Border.BorderBrush>

                                        <Border.InputBindings>
                                            <MouseBinding Gesture="LeftDoubleClick" 
                                                          Command="{Binding DataContext.EditTodoCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                          CommandParameter="{Binding}"/>
                                        </Border.InputBindings>

                                        <StackPanel>
                                            <Grid Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="{Binding Titolo}" 
                                                           FontWeight="Bold" FontSize="14" TextWrapping="Wrap"
                                                           TextDecorations="Strikethrough"/>

                                                <Border Grid.Column="1" CornerRadius="10" Padding="8,4" Margin="5,0,0,0">
                                                    <Border.Background>
                                                        <SolidColorBrush Color="{Binding ColorePriorita}"/>
                                                    </Border.Background>
                                                    <TextBlock Text="{Binding IconaPriorita}" Foreground="White" FontSize="10" FontWeight="Bold"/>
                                                </Border>
                                            </Grid>

                                            <TextBlock Text="{Binding TestoCategoria}" FontSize="11" Foreground="#666" Margin="0,0,0,5"/>

                                            <TextBlock Text="{Binding ClienteNome, StringFormat='ðŸ¢ {0}'}" 
                                                       FontSize="11" Foreground="#2196F3" Margin="0,0,0,5"
                                                       Visibility="{Binding ClienteNome, Converter={StaticResource CountToVisibility}}"/>

                                            <TextBlock Text="{Binding TipoPraticaNome, StringFormat='ðŸ“‹ {0}'}" 
                                                       FontSize="11" Foreground="#FF9800" Margin="0,0,0,5"
                                                       Visibility="{Binding TipoPraticaNome, Converter={StaticResource CountToVisibility}}"/>

                                            <TextBlock Text="{Binding ProfessionistiAssegnatiText, StringFormat='ðŸ‘¤ {0}'}" 
                                                       FontSize="11" Foreground="#666" Margin="0,0,0,5"
                                                       TextWrapping="Wrap"/>

                                            <TextBlock Text="{Binding DataCompletamento, StringFormat='âœ… Completato: {0:dd/MM/yyyy}'}" 
                                                       FontSize="10" Foreground="#4CAF50" FontWeight="Bold" Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </DockPanel>
        </Border>

        <!-- COLONNA 4: ANNULLATA -->
            <Border Grid.Column="6" Background="White" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1">
                <DockPanel>
                    <Border DockPanel.Dock="Top" Background="#F44336" CornerRadius="8,8,0,0" Padding="15">
                        <StackPanel>
                            <TextBlock Text="âŒ ANNULLATA" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding CountAnnullata, StringFormat='{}{0} tasks'}" 
                                       FontSize="12" Foreground="White" HorizontalAlignment="Center" Margin="0,3,0,0"/>
                        </StackPanel>
                    </Border>

                    <Grid AllowDrop="True"
                          Drop="Column_Drop"
                          DragEnter="Column_DragEnter"
                          DragLeave="Column_DragLeave"
                          Tag="Annullata"
                          Background="Transparent">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                            <ItemsControl ItemsSource="{Binding TodosAnnullata}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" 
                                                BorderThickness="2" 
                                                CornerRadius="6" 
                                                Padding="12" 
                                                Margin="0,0,0,10"
                                                Cursor="Hand"
                                                MouseLeftButtonDown="Todo_MouseLeftButtonDown"
                                                PreviewMouseMove="Todo_PreviewMouseMove"
                                                Tag="{Binding}">
                                            <Border.BorderBrush>
                                                <SolidColorBrush Color="{Binding ColorePriorita}"/>
                                            </Border.BorderBrush>

                                        <Border.InputBindings>
                                            <MouseBinding Gesture="LeftDoubleClick" 
                                                          Command="{Binding DataContext.EditTodoCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                          CommandParameter="{Binding}"/>
                                        </Border.InputBindings>

                                        <StackPanel>
                                            <Grid Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="{Binding Titolo}" 
                                                           FontWeight="Bold" FontSize="14" TextWrapping="Wrap"
                                                           TextDecorations="Strikethrough" Foreground="#999"/>

                                                <Border Grid.Column="1" CornerRadius="10" Padding="8,4" Margin="5,0,0,0">
                                                    <Border.Background>
                                                        <SolidColorBrush Color="{Binding ColorePriorita}"/>
                                                    </Border.Background>
                                                    <TextBlock Text="{Binding IconaPriorita}" Foreground="White" FontSize="10" FontWeight="Bold"/>
                                                </Border>
                                            </Grid>

                                            <TextBlock Text="{Binding TestoCategoria}" FontSize="11" Foreground="#666" Margin="0,0,0,5"/>

                                            <TextBlock Text="{Binding ClienteNome, StringFormat='ðŸ¢ {0}'}" 
                                                       FontSize="11" Foreground="#2196F3" Margin="0,0,0,5"
                                                       Visibility="{Binding ClienteNome, Converter={StaticResource CountToVisibility}}"/>

                                            <TextBlock Text="{Binding TipoPraticaNome, StringFormat='ðŸ“‹ {0}'}" 
                                                       FontSize="11" Foreground="#FF9800" Margin="0,0,0,5"
                                                       Visibility="{Binding TipoPraticaNome, Converter={StaticResource CountToVisibility}}"/>

                                            <TextBlock Text="{Binding ProfessionistiAssegnatiText, StringFormat='ðŸ‘¤ {0}'}" 
                                                       FontSize="11" Foreground="#666" Margin="0,0,0,5"
                                                       TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </DockPanel>
        </Border>
    </Grid>
</Grid>
</Window>

