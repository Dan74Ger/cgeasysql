                   Foreground="White" 
                   Padding="15,12" 
                   FontSize="14" 
                   FontWeight="SemiBold"
                   BorderThickness="0"
                   Cursor="Hand"
                   Margin="10,0,0,0">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="Background" Value="#27ae60"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
