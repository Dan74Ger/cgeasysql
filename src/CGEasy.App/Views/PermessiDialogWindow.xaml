                   Background="#95a5a6" 
                   Foreground="White" 
                   Padding="15,12" 
                   FontSize="14" 
                   FontWeight="SemiBold"
                   BorderThickness="0"
                   Cursor="Hand"
                   Margin="0,0,10,0">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="Background" Value="#95a5a6"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7f8c8d"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Grid.Column="1" 
