<UserControl x:Class="CGEasy.App.Views.ClientiView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Statistics Cards -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Card 1: Totali -->
            <Border Grid.Column="0" 
                    Background="White"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,10,0"
                    ui:ThemeManager.HasThemeResources="True">
                <ui:ThemeManager.RequestedTheme>
                    <ui:ElementTheme>Light</ui:ElementTheme>
                </ui:ThemeManager.RequestedTheme>
                <StackPanel>
                    <TextBlock Text="ðŸ‘¥" FontSize="24" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding TotalClienti}" 
                               FontSize="32" 
                               FontWeight="Bold"
                               Foreground="#007ACC"/>
                    <TextBlock Text="Totali" 
                               FontSize="13" 
                               Foreground="Gray"/>
                </StackPanel>
            </Border>

            <!-- Card 2: Attivi -->
            <Border Grid.Column="1" 
                    Background="White"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,10,0"
                    ui:ThemeManager.HasThemeResources="True">
                <ui:ThemeManager.RequestedTheme>
                    <ui:ElementTheme>Light</ui:ElementTheme>
                </ui:ThemeManager.RequestedTheme>
                <StackPanel>
                    <TextBlock Text="âœ…" FontSize="24" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding ClientiAttivi}" 
                               FontSize="32" 
                               FontWeight="Bold"
                               Foreground="#00B294"/>
                    <TextBlock Text="Attivi" 
                               FontSize="13" 
                               Foreground="Gray"/>
                </StackPanel>
            </Border>

            <!-- Card 3: Cessati -->
            <Border Grid.Column="2" 
                    Background="White"
                    CornerRadius="8"
                    Padding="20"
                    ui:ThemeManager.HasThemeResources="True">
                <ui:ThemeManager.RequestedTheme>
                    <ui:ElementTheme>Light</ui:ElementTheme>
                </ui:ThemeManager.RequestedTheme>
                <StackPanel>
                    <TextBlock Text="âŒ" FontSize="24" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding ClientiCessati}" 
                               FontSize="32" 
                               FontWeight="Bold"
                               Foreground="#E81123"/>
                    <TextBlock Text="Cessati" 
                               FontSize="13" 
                               Foreground="Gray"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Toolbar -->
        <Border Grid.Row="1" 
                Background="White"
                CornerRadius="8"
                Padding="20,15"
                Margin="0,0,0,15"
                ui:ThemeManager.HasThemeResources="True">
            <ui:ThemeManager.RequestedTheme>
                <ui:ElementTheme>Light</ui:ElementTheme>
            </ui:ThemeManager.RequestedTheme>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Ricerca e Filtri -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             ui:ControlHelper.PlaceholderText="ðŸ” Cerca per nome..."
                             Width="300"
                             Height="36"
                             VerticalContentAlignment="Center"
                             Margin="0,0,15,0"/>

                    <CheckBox Content="Solo Attivi" 
                              IsChecked="{Binding ShowOnlyActive}"
                              VerticalAlignment="Center"
                              Margin="0,0,15,0"/>

                    <Button Content="ðŸ”„ Aggiorna" 
                            Command="{Binding RefreshCommand}"
                            Height="36"
                            Padding="15,0"
                            Margin="0,0,10,0"/>
                </StackPanel>

                <!-- Azioni -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="âž• Nuovo Cliente" 
                            Command="{Binding NewClienteCommand}"
                            Style="{StaticResource AccentButtonStyle}"
                            Height="36"
                            Padding="20,0"
                            FontWeight="SemiBold"
                            Margin="0,0,10,0"/>

                    <Button Content="ðŸ“Š Export Excel" 
                            Command="{Binding ExportExcelCommand}"
                            Height="36"
                            Padding="15,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Data Grid -->
        <Border Grid.Row="2" 
                Background="White"
                CornerRadius="8"
                Padding="0"
                ui:ThemeManager.HasThemeResources="True">
            <ui:ThemeManager.RequestedTheme>
                <ui:ElementTheme>Light</ui:ElementTheme>
            </ui:ThemeManager.RequestedTheme>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Lista Clienti -->
                <DataGrid Grid.Row="0"
                          ItemsSource="{Binding Clienti}"
                          SelectedItem="{Binding SelectedCliente}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          CanUserSortColumns="True"
                          CanUserReorderColumns="True"
                          CanUserResizeColumns="True"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          AlternatingRowBackground="#F9F9F9"
                          Margin="1">

                    <DataGrid.Columns>
                        <!-- Stato -->
                        <DataGridTextColumn Header="Stato" 
                                            Binding="{Binding StatoDescrizione}" 
                                            Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Attivo}" Value="True">
                                            <Setter Property="Foreground" Value="Green"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Attivo}" Value="False">
                                            <Setter Property="Foreground" Value="Red"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Nome Cliente -->
                        <DataGridTextColumn Header="Nome Cliente" 
                                            Binding="{Binding NomeCliente}" 
                                            Width="*"
                                            MinWidth="200">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Padding" Value="5,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Partita IVA -->
                        <DataGridTextColumn Header="P.IVA" 
                                            Binding="{Binding PivaCliente}" 
                                            Width="130"/>

                        <!-- Codice Fiscale -->
                        <DataGridTextColumn Header="Codice Fiscale" 
                                            Binding="{Binding CfCliente}" 
                                            Width="150"/>

                        <!-- Email -->
                        <DataGridTextColumn Header="Email" 
                                            Binding="{Binding MailCliente}" 
                                            Width="200"/>

                        <!-- CittÃ  -->
                        <DataGridTextColumn Header="CittÃ " 
                                            Binding="{Binding Citta}" 
                                            Width="120"/>

                        <!-- Data Attivazione -->
                        <DataGridTextColumn Header="Data Attivazione" 
                                            Binding="{Binding DataAttivazione, StringFormat=\{0:dd/MM/yyyy\}}" 
                                            Width="120"/>
                    </DataGrid.Columns>

                    <!-- Context Menu -->
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="ðŸ“ Modifica" 
                                      Command="{Binding EditClienteCommand}"/>
                            <MenuItem Header="ðŸ‘ Visualizza Dettagli" 
                                      Command="{Binding ViewDetailsCommand}"/>
                            <Separator/>
                            <MenuItem Header="âœ… Riattiva Cliente" 
                                      Command="{Binding ActivateClienteCommand}"/>
                            <MenuItem Header="âŒ Disattiva Cliente" 
                                      Command="{Binding DeleteClienteCommand}"/>
                            <Separator/>
                            <MenuItem Header="ðŸ—‘ï¸ Elimina Definitivamente" 
                                      Command="{Binding DeletePermanentlyCommand}"
                                      Foreground="Red"
                                      FontWeight="Bold"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>

                <!-- Action Buttons (Bottom) -->
                <Border Grid.Row="1" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="0,1,0,0"
                        Background="#F5F5F5"
                        Padding="20,15">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="ðŸ“ Modifica" 
                                Command="{Binding EditClienteCommand}"
                                Height="36"
                                Width="110"
                                Margin="0,0,10,0"/>

                        <Button Content="ðŸ‘ Dettagli" 
                                Command="{Binding ViewDetailsCommand}"
                                Height="36"
                                Width="100"
                                Margin="0,0,10,0"/>

                        <Button Content="âœ… Riattiva" 
                                Command="{Binding ActivateClienteCommand}"
                                Height="36"
                                Width="100"
                                Margin="0,0,10,0"/>

                        <Button Content="âŒ Disattiva" 
                                Command="{Binding DeleteClienteCommand}"
                                Height="36"
                                Width="100"
                                Margin="0,0,10,0"/>

                        <Button Content="ðŸ—‘ï¸ Elimina" 
                                Command="{Binding DeletePermanentlyCommand}"
                                Height="36"
                                Width="100"
                                Background="#E81123"
                                Foreground="White"
                                FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>



