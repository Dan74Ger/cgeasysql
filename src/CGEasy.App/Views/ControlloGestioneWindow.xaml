<Window x:Class="CGEasy.App.Views.ControlloGestioneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CGEasy.App.Views"
        mc:Ignorable="d"
        Title="Controllo di Gestione - CGEasy" 
        Height="850" Width="1500"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <Grid Background="#F5F6FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ“Š" FontSize="28" Margin="0,0,15,0"/>
                <TextBlock Text="CONTROLLO DI GESTIONE" FontSize="24" FontWeight="Bold" 
                           Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- TAB CONTROL PRINCIPALE -->
        <TabControl Grid.Row="1" Margin="0" Background="Transparent" BorderThickness="0"
                    SelectionChanged="TabControl_SelectionChanged">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" Background="#ECF0F1" BorderThickness="0" 
                                        Padding="20,12" Margin="2,0,2,0" CornerRadius="8,8,0,0">
                                    <ContentPresenter ContentSource="Header" 
                                                      HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="White"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#D5DBDB"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Foreground" Value="#2C3E50"/>
                </Style>
            </TabControl.Resources>

            <!-- TAB RIEPILOGO -->
            <TabItem x:Name="TabRiepilogo">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“Š" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Riepilogo Generale"/>
                    </StackPanel>
                </TabItem.Header>
                <local:RiepilogoBancheView x:Name="RiepilogoBancheViewControl"/>
            </TabItem>

            <!-- TAB GESTIONE BANCHE -->
            <TabItem x:Name="TabGestioneBanche">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ¦" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Gestione Banche"/>
                    </StackPanel>
                </TabItem.Header>
                <local:GestioneBancheView x:Name="GestioneBancheViewControl"/>
            </TabItem>

            <!-- TAB DETTAGLIO BANCA (nascosto inizialmente, verrÃ  mostrato quando si seleziona una banca) -->
            <TabItem x:Name="TabDettaglioBanca" Visibility="Collapsed">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ’¼" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock x:Name="DettaglioBancaTitle" Text="Dettaglio Banca"/>
                    </StackPanel>
                </TabItem.Header>
                <local:BancaDettaglioView x:Name="BancaDettaglioViewControl"/>
            </TabItem>

            <!-- TAB MARGINE TESORERIA -->
            <TabItem x:Name="TabMargineTesoreria">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ’°" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Margine di Tesoreria"/>
                    </StackPanel>
                </TabItem.Header>
                <local:MargineTesoreraView/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>

