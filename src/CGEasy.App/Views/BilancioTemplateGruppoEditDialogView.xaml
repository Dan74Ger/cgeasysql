<Window x:Class="CGEasy.App.Views.BilancioTemplateGruppoEditDialogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="âœï¸ Modifica Template"
        Height="580" Width="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinHeight="580" MinWidth="550"
        Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SystemControlBackgroundAccentBrush}"
                CornerRadius="8" Padding="15" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="âœï¸" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="Modifica Template Riclassificazione" 
                           FontSize="18" FontWeight="SemiBold" 
                           Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Form -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="20"
                ui:ThemeManager.HasThemeResources="True">
            <ui:ThemeManager.RequestedTheme>
                <ui:ElementTheme>Light</ui:ElementTheme>
            </ui:ThemeManager.RequestedTheme>
            
            <StackPanel>
                <!-- Cliente (read-only) -->
                <TextBlock Text="ðŸ¢ Cliente" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="ClienteTextBox" 
                         IsReadOnly="True"
                         Background="#F5F5F5"
                         Margin="0,0,0,15"
                         Height="35"
                         VerticalContentAlignment="Center"/>

                <!-- Descrizione -->
                <TextBlock Text="ðŸ“ Descrizione Template" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="DescrizioneTextBox" 
                         ui:ControlHelper.PlaceholderText="Es: Template Gennaio 2024, Template Q1 2024..."
                         Height="35"
                         VerticalContentAlignment="Center"
                         Margin="0,0,0,15"/>

                <!-- Tipo Bilancio -->
                <TextBlock Text="ðŸ“Š Tipo Bilancio" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox x:Name="TipoBilancioComboBox"
                          Height="35"
                          Margin="0,0,0,15">
                    <ComboBoxItem Content="CE - Conto Economico" Tag="CE"/>
                    <ComboBoxItem Content="SP - Stato Patrimoniale" Tag="SP"/>
                </ComboBox>

                <!-- Periodo -->
                <TextBlock Text="ðŸ“… Periodo" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Mese" FontSize="12" Foreground="Gray" Margin="0,0,0,5"/>
                        <ComboBox x:Name="MeseComboBox" 
                                  Height="35"
                                  VerticalContentAlignment="Center">
                            <ComboBoxItem Content="01 - Gennaio" Tag="1"/>
                            <ComboBoxItem Content="02 - Febbraio" Tag="2"/>
                            <ComboBoxItem Content="03 - Marzo" Tag="3"/>
                            <ComboBoxItem Content="04 - Aprile" Tag="4"/>
                            <ComboBoxItem Content="05 - Maggio" Tag="5"/>
                            <ComboBoxItem Content="06 - Giugno" Tag="6"/>
                            <ComboBoxItem Content="07 - Luglio" Tag="7"/>
                            <ComboBoxItem Content="08 - Agosto" Tag="8"/>
                            <ComboBoxItem Content="09 - Settembre" Tag="9"/>
                            <ComboBoxItem Content="10 - Ottobre" Tag="10"/>
                            <ComboBoxItem Content="11 - Novembre" Tag="11"/>
                            <ComboBoxItem Content="12 - Dicembre" Tag="12"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Anno" FontSize="12" Foreground="Gray" Margin="0,0,0,5"/>
                        <TextBox x:Name="AnnoTextBox" 
                                 Height="35"
                                 VerticalContentAlignment="Center"
                                 ui:ControlHelper.PlaceholderText="Es: 2024"
                                 MaxLength="4"/>
                    </StackPanel>
                </Grid>

                <!-- Info -->
                <Border Background="#FFF3E0" CornerRadius="6" Padding="10" Margin="0,15,0,0">
                    <StackPanel>
                        <TextBlock Text="â„¹ï¸ Nota importante:" FontWeight="SemiBold" FontSize="12" Foreground="#F57C00"/>
                        <TextBlock Text="Modificando il periodo, TUTTE le righe del template verranno aggiornate." 
                                   FontSize="11" Foreground="#E65100" TextWrapping="Wrap" Margin="0,3,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <Grid Grid.Row="2" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" 
                    Content="âŒ Annulla"
                    Click="CancelButton_Click"
                    Height="40"
                    FontSize="14"/>
            
            <Button Grid.Column="2" 
                    Content="âœ… Salva"
                    Click="SaveButton_Click"
                    Style="{StaticResource AccentButtonStyle}"
                    Height="40"
                    FontSize="14"/>
        </Grid>
    </Grid>
</Window>

