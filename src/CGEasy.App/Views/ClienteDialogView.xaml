<Window x:Class="CGEasy.App.Views.ClienteDialogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="{Binding WindowTitle}"
        Height="700" Width="800"
        MinHeight="650" MinWidth="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="0" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="30,20">
            <StackPanel>
                <!-- Titolo -->
                <TextBlock Text="{Binding WindowTitle}" 
                           FontSize="24" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,25"/>

                <!-- DATI ANAGRAFICI -->
                <Border Background="White"
                        CornerRadius="8"
                        Padding="25"
                        Margin="0,0,0,15"
                        ui:ThemeManager.HasThemeResources="True">
                    <ui:ThemeManager.RequestedTheme>
                        <ui:ElementTheme>Light</ui:ElementTheme>
                    </ui:ThemeManager.RequestedTheme>
                    <StackPanel>
                        <TextBlock Text="ðŸ“‹ Dati Anagrafici" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,15"/>

                        <!-- Nome Cliente -->
                        <TextBlock Text="Nome Cliente *" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Cliente.NomeCliente, UpdateSourceTrigger=PropertyChanged}"
                                 ui:ControlHelper.PlaceholderText="Inserisci nome o ragione sociale"
                                 Height="36"
                                 Margin="0,0,0,15"/>

                        <!-- Email -->
                        <TextBlock Text="Email" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Cliente.MailCliente, UpdateSourceTrigger=PropertyChanged}"
                                 ui:ControlHelper.PlaceholderText="email@esempio.it"
                                 Height="36"
                                 Margin="0,0,0,15"/>

                        <!-- P.IVA e Codice Fiscale -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Partita IVA" 
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,5"/>
                                <TextBox Text="{Binding Cliente.PivaCliente, UpdateSourceTrigger=PropertyChanged}"
                                         ui:ControlHelper.PlaceholderText="IT01234567890"
                                         Height="36"
                                         MaxLength="16"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Codice Fiscale" 
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,5"/>
                                <TextBox Text="{Binding Cliente.CfCliente, UpdateSourceTrigger=PropertyChanged}"
                                         ui:ControlHelper.PlaceholderText="RSSMRA80A01H501U"
                                         Height="36"
                                         MaxLength="16"/>
                            </StackPanel>
                        </Grid>

                        <!-- Codice ATECO -->
                        <TextBlock Text="Codice ATECO" 
                                   FontWeight="SemiBold"
                                   Margin="0,15,0,5"/>
                        <TextBox Text="{Binding Cliente.CodiceAteco, UpdateSourceTrigger=PropertyChanged}"
                                 ui:ControlHelper.PlaceholderText="es: 62.01.00"
                                 Height="36"
                                 Margin="0,0,0,0"/>
                    </StackPanel>
                </Border>

                <!-- INDIRIZZO -->
                <Border Background="White"
                        CornerRadius="8"
                        Padding="25"
                        Margin="0,0,0,15"
                        ui:ThemeManager.HasThemeResources="True">
                    <ui:ThemeManager.RequestedTheme>
                        <ui:ElementTheme>Light</ui:ElementTheme>
                    </ui:ThemeManager.RequestedTheme>
                    <StackPanel>
                        <TextBlock Text="ðŸ“ Indirizzo" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,15"/>

                        <!-- Indirizzo -->
                        <TextBlock Text="Indirizzo" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Cliente.Indirizzo, UpdateSourceTrigger=PropertyChanged}"
                                 ui:ControlHelper.PlaceholderText="Via, Piazza, Viale..."
                                 Height="36"
                                 Margin="0,0,0,15"/>

                        <!-- CAP, CittÃ , Provincia -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="CAP" 
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,5"/>
                                <TextBox Text="{Binding Cliente.Cap, UpdateSourceTrigger=PropertyChanged}"
                                         ui:ControlHelper.PlaceholderText="00100"
                                         Height="36"
                                         MaxLength="5"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="CittÃ " 
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,5"/>
                                <TextBox Text="{Binding Cliente.Citta, UpdateSourceTrigger=PropertyChanged}"
                                         ui:ControlHelper.PlaceholderText="Roma"
                                         Height="36"/>
                            </StackPanel>

                            <StackPanel Grid.Column="4">
                                <TextBlock Text="Provincia" 
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,5"/>
                                <TextBox Text="{Binding Cliente.Provincia, UpdateSourceTrigger=PropertyChanged}"
                                         ui:ControlHelper.PlaceholderText="RM"
                                         Height="36"
                                         MaxLength="2"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- LEGALE RAPPRESENTANTE -->
                <Border Background="White"
                        CornerRadius="8"
                        Padding="25"
                        Margin="0,0,0,15"
                        ui:ThemeManager.HasThemeResources="True">
                    <ui:ThemeManager.RequestedTheme>
                        <ui:ElementTheme>Light</ui:ElementTheme>
                    </ui:ThemeManager.RequestedTheme>
                    <StackPanel>
                        <TextBlock Text="ðŸ‘¤ Legale Rappresentante" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,15"/>

                        <!-- Nome Legale Rappresentante -->
                        <TextBlock Text="Nome e Cognome" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Cliente.LegaleRappresentante, UpdateSourceTrigger=PropertyChanged}"
                                 ui:ControlHelper.PlaceholderText="Mario Rossi"
                                 Height="36"
                                 Margin="0,0,0,15"/>

                        <!-- CF Legale Rappresentante -->
                        <TextBlock Text="Codice Fiscale" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Cliente.CfLegaleRappresentante, UpdateSourceTrigger=PropertyChanged}"
                                 ui:ControlHelper.PlaceholderText="RSSMRA80A01H501U"
                                 Height="36"
                                 MaxLength="16"/>
                    </StackPanel>
                </Border>

                <!-- STATO -->
                <Border Background="White"
                        CornerRadius="8"
                        Padding="25"
                        Margin="0,0,0,0"
                        ui:ThemeManager.HasThemeResources="True">
                    <ui:ThemeManager.RequestedTheme>
                        <ui:ElementTheme>Light</ui:ElementTheme>
                    </ui:ThemeManager.RequestedTheme>
                    <StackPanel>
                        <TextBlock Text="âš™ï¸ Stato" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,15"/>

                        <!-- Checkbox Attivo -->
                        <CheckBox Content="Cliente Attivo" 
                                  IsChecked="{Binding Cliente.Attivo}"
                                  FontWeight="SemiBold"/>
                        <TextBlock Text="I clienti attivi vengono inclusi nelle operazioni automatiche (fatturazione, attivitÃ  fiscali, etc.)"
                                   Foreground="Gray"
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   Margin="26,5,0,0"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="1" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,1,0,0"
                Background="#F5F5F5"
                Padding="30,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Info Required Fields -->
                <TextBlock Grid.Column="0"
                           Text="* Campi obbligatori"
                           Foreground="Gray"
                           FontSize="12"
                           VerticalAlignment="Center"/>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <Button Content="âœ– Annulla" 
                            Click="CancelButton_Click"
                            Height="36"
                            Width="110"
                            Margin="0,0,10,0"/>
                    
                    <Button Content="âœ“ Salva" 
                            Click="SaveButton_Click"
                            Style="{StaticResource AccentButtonStyle}"
                            Height="36"
                            Width="110"
                            FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>

