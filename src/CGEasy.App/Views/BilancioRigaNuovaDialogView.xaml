<Window x:Class="CGEasy.App.Views.BilancioRigaNuovaDialogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="Nuova Riga Bilancio" 
        Height="600" Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinHeight="550"
        MinWidth="650"
        Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}">
    
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SystemControlBackgroundAccentBrush}"
                CornerRadius="8" Padding="20" Margin="0,0,0,25">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="âž•" FontSize="32" VerticalAlignment="Center" Margin="0,0,15,0"/>
                <StackPanel>
                    <TextBlock Text="NUOVA RIGA BILANCIO" FontSize="20" FontWeight="SemiBold" Foreground="White"/>
                    <TextBlock Text="Inserisci codice, descrizione e importo" FontSize="13" 
                               Foreground="White" Opacity="0.9" Margin="0,5,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Form -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="ðŸ”¢ Codice Mastrino:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <TextBox x:Name="CodiceTextBox"
                     ui:ControlHelper.PlaceholderText="Es: 01.001"
                     FontSize="15"
                     Margin="0,0,0,25"
                     Height="45"
                     VerticalContentAlignment="Center"/>

            <TextBlock Text="ðŸ“ Descrizione:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <TextBox x:Name="DescrizioneTextBox"
                     ui:ControlHelper.PlaceholderText="Es: Cassa"
                     FontSize="15"
                     Margin="0,0,0,25"
                     Height="45"
                     VerticalContentAlignment="Center"/>

            <TextBlock Text="ðŸ’° Importo (â‚¬):" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <TextBox x:Name="ImportoTextBox"
                     ui:ControlHelper.PlaceholderText="Es: 1500.50 o -200.00"
                     FontSize="15"
                     Margin="0,0,0,25"
                     Height="45"
                     VerticalContentAlignment="Center"/>
        </StackPanel>

        <!-- Buttons -->
        <Border Grid.Row="2" BorderThickness="0,1,0,0" BorderBrush="#E0E0E0" Padding="0,25,0,0" Margin="0,25,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="âŒ Annulla" 
                        Click="CancelButton_Click"
                        Padding="20,10" 
                        FontSize="13"
                        Margin="0,0,15,0"
                        MinWidth="130"/>
                <Button Content="ðŸ’¾ Crea" 
                        Click="SaveButton_Click"
                        Style="{StaticResource AccentButtonStyle}"
                        Padding="20,10"
                        FontSize="13"
                        MinWidth="130"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

