<Window x:Class="CGEasy.App.Views.BilancioDettaglioView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="{Binding Titolo}"
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SystemControlBackgroundAccentBrush}"
                CornerRadius="8" Padding="20" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ“‹" FontSize="32" VerticalAlignment="Center" Margin="0,0,15,0"/>
                <StackPanel>
                    <TextBlock Text="{Binding Titolo}" FontSize="24" FontWeight="SemiBold" Foreground="White"/>
                    <TextBlock Text="Dettaglio mastrini contabili" FontSize="13" 
                               Foreground="White" Opacity="0.9" Margin="0,5,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" 
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         ui:ControlHelper.PlaceholderText="ðŸ” Cerca per codice o descrizione..."
                         VerticalContentAlignment="Center"
                         Height="35"
                         Margin="0,0,15,0"/>

                <Button Grid.Column="1" 
                        Content="ðŸ› DEBUG"
                        Command="{Binding DebugInfoCommand}"
                        Background="#FF9800"
                        Foreground="White"
                        Padding="15,8"
                        Margin="0,0,10,0"/>

                <Button Grid.Column="2" 
                        Content="âž• Nuova Riga"
                        Command="{Binding NewRigaCommand}"
                        Style="{StaticResource AccentButtonStyle}"
                        Padding="15,8"
                        Margin="0,0,10,0"/>

                <Button Grid.Column="3" 
                        Content="ðŸ“Š Export Excel"
                        Command="{Binding ExportExcelCommand}"
                        Padding="15,8"
                        Margin="0,0,10,0"/>
                
                <!-- Pulsante Elimina Selezionate -->
                <Button Grid.Column="4"
                        Content="ðŸ—‘ï¸ Elimina Selezionate"
                        Command="{Binding DeleteSelectedRigheCommand}"
                        Background="#F44336"
                        Foreground="White"
                        Padding="15,8"
                        ToolTip="Elimina le righe selezionate con checkbox">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasSelectedRighe}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- DataGrid -->
        <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="10">
            <DataGrid ItemsSource="{Binding RigheFiltrate}"
                      AutoGenerateColumns="False"
                      IsReadOnly="False"
                      SelectionMode="Extended"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserResizeRows="False"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      AlternatingRowBackground="#F9F9F9"
                      RowHeight="40">
                
                <DataGrid.Columns>
                    <!-- Checkbox NATIVA WPF - PIÃ™ AFFIDABILE -->
                    <DataGridCheckBoxColumn Header="â˜‘ Sel." 
                                           Binding="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                           Width="80"
                                           CanUserResize="False">
                        <DataGridCheckBoxColumn.ElementStyle>
                            <Style TargetType="CheckBox">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Width" Value="25"/>
                                <Setter Property="Height" Value="25"/>
                            </Style>
                        </DataGridCheckBoxColumn.ElementStyle>
                        <DataGridCheckBoxColumn.EditingElementStyle>
                            <Style TargetType="CheckBox">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Width" Value="25"/>
                                <Setter Property="Height" Value="25"/>
                            </Style>
                        </DataGridCheckBoxColumn.EditingElementStyle>
                    </DataGridCheckBoxColumn>
                    
                    <DataGridTextColumn Header="ðŸ”¢ Codice" Binding="{Binding CodiceMastrino}" Width="150" IsReadOnly="True"/>
                    <DataGridTextColumn Header="ðŸ“ Descrizione" Binding="{Binding DescrizioneMastrino}" Width="*" MinWidth="300" IsReadOnly="True"/>
                    
                    <DataGridTemplateColumn Header="ðŸ’° Importo" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ImportoFormatted}" 
                                           TextAlignment="Right"
                                           FontWeight="SemiBold"
                                           Foreground="#2196F3"
                                           Margin="5,0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <DataGridTemplateColumn Header="âš™ï¸ Azioni" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="âœï¸" 
                                            ToolTip="Modifica"
                                            Command="{Binding DataContext.EditRigaCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Padding="8,4" 
                                            Margin="2"/>
                                    <Button Content="ðŸ—‘ï¸" 
                                            ToolTip="Elimina"
                                            Command="{Binding DataContext.DeleteRigaCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Padding="8,4" 
                                            Margin="2"
                                            Foreground="Red"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Footer Statistics (solo totale righe) -->
        <Border Grid.Row="3" Background="White" CornerRadius="8" Padding="20" Margin="0,15,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Border Background="#E3F2FD" CornerRadius="6" Padding="15,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“Š Totale Righe:" FontWeight="SemiBold" Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding TotaleRighe}" FontWeight="Bold" FontSize="16" Foreground="#2196F3"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>

