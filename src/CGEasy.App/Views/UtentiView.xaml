<UserControl x:Class="CGEasy.App.Views.UtentiView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="ðŸ‘¥ Gestione Utenti" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="#2c3e50"/>
                <TextBlock Text="Gestisci utenti, ruoli e permessi del sistema" 
                          FontSize="14" 
                          Foreground="#7f8c8d" 
                          Margin="0,5,0,0"/>
            </StackPanel>

            <Button Grid.Column="1" 
                   Content="âž• Nuovo Utente" 
                   Command="{Binding NewUtenteCommand}"
                   Background="#27ae60" 
                   Foreground="White" 
                   Padding="20,12" 
                   FontSize="14" 
                   FontWeight="SemiBold"
                   BorderThickness="0"
                   Cursor="Hand"
                   VerticalAlignment="Center">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="Background" Value="#27ae60"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#229954"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>

        <!-- STATISTICHE CARDS -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Card Totale -->
            <Border Grid.Column="0" Background="#3498db" CornerRadius="8" Padding="20" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="TOTALE UTENTI" Foreground="White" FontSize="12" FontWeight="SemiBold" Opacity="0.9"/>
                    <TextBlock Text="{Binding TotalUtenti}" Foreground="White" FontSize="36" FontWeight="Bold" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Card Admin -->
            <Border Grid.Column="1" Background="#e74c3c" CornerRadius="8" Padding="20" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="ðŸ‘‘ ADMINISTRATOR" Foreground="White" FontSize="12" FontWeight="SemiBold" Opacity="0.9"/>
                    <TextBlock Text="{Binding TotalAdmin}" Foreground="White" FontSize="36" FontWeight="Bold" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Card Senior -->
            <Border Grid.Column="2" Background="#f39c12" CornerRadius="8" Padding="20" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="â­ USER SENIOR" Foreground="White" FontSize="12" FontWeight="SemiBold" Opacity="0.9"/>
                    <TextBlock Text="{Binding TotalUserSenior}" Foreground="White" FontSize="36" FontWeight="Bold" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Card User -->
            <Border Grid.Column="3" Background="#27ae60" CornerRadius="8" Padding="20">
                <StackPanel>
                    <TextBlock Text="ðŸ‘¤ USER" Foreground="White" FontSize="12" FontWeight="SemiBold" Opacity="0.9"/>
                    <TextBlock Text="{Binding TotalUser}" Foreground="White" FontSize="36" FontWeight="Bold" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- RICERCA E FILTRI -->
        <Grid Grid.Row="2" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" 
                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                    materialDesign:HintAssist.Hint="ðŸ” Cerca per username, nome, email..." 
                    Padding="12,10" 
                    FontSize="14"
                    Margin="0,0,15,0"/>

            <CheckBox Grid.Column="1" 
                     Content="Solo Attivi" 
                     IsChecked="{Binding ShowOnlyActive}"
                     VerticalAlignment="Center"
                     FontSize="14"
                     FontWeight="SemiBold"
                     Margin="0,0,15,0"/>

            <Button Grid.Column="2" 
                   Content="ðŸ”„ Aggiorna" 
                   Command="{Binding RefreshCommand}"
                   Background="#3498db" 
                   Foreground="White" 
                   Padding="15,10" 
                   FontSize="14"
                   BorderThickness="0"
                   Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="Background" Value="#3498db"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980b9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>

        <!-- GRID + AZIONI -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <!-- DATA GRID -->
            <Border Grid.Column="0" BorderBrush="#bdc3c7" BorderThickness="1" CornerRadius="8" Background="White" Margin="0,0,15,0">
                <DataGrid ItemsSource="{Binding Utenti}" 
                         SelectedItem="{Binding SelectedUtente}"
                         AutoGenerateColumns="False" 
                         CanUserAddRows="False" 
                         IsReadOnly="True"
                         SelectionMode="Single"
                         GridLinesVisibility="Horizontal"
                         HeadersVisibility="Column"
                         AlternatingRowBackground="#ecf0f1"
                         RowHeight="45"
                         FontSize="13">
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="140"/>
                        <DataGridTextColumn Header="Nome Completo" Binding="{Binding NomeCompleto}" Width="200"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                        
                        <DataGridTemplateColumn Header="Ruolo" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding RuoloUtenteColor}" 
                                           CornerRadius="4" 
                                           Padding="10,5">
                                        <TextBlock Text="{Binding RuoloDescrizione}" 
                                                  Foreground="White" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="11" 
                                                  HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Stato" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock FontWeight="SemiBold" FontSize="12">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="âŒ Disattivo"/>
                                                <Setter Property="Foreground" Value="#e74c3c"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Attivo}" Value="True">
                                                        <Setter Property="Text" Value="âœ… Attivo"/>
                                                        <Setter Property="Foreground" Value="#27ae60"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Ultimo Accesso" Binding="{Binding UltimoAccesso, StringFormat=dd/MM/yyyy HH:mm}" Width="140"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- PANNELLO AZIONI -->
            <Border Grid.Column="1" BorderBrush="#bdc3c7" BorderThickness="1" CornerRadius="8" Background="White" Padding="15">
                <StackPanel>
                    <TextBlock Text="âš™ï¸ Azioni" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Foreground="#2c3e50" 
                              Margin="0,0,0,15"/>

                    <Button Content="âœï¸ Modifica" 
                           Command="{Binding EditUtenteCommand}"
                           Background="#3498db" 
                           Foreground="White" 
                           Padding="12,10" 
                           Margin="0,0,0,10"
                           FontSize="13"
                           BorderThickness="0"
                           Cursor="Hand"
                           HorizontalContentAlignment="Left"/>

                    <Button Content="ðŸ”‘ Cambia Password" 
                           Command="{Binding ChangePasswordCommand}"
                           Background="#f39c12" 
                           Foreground="White" 
                           Padding="12,10" 
                           Margin="0,0,0,10"
                           FontSize="13"
                           BorderThickness="0"
                           Cursor="Hand"
                           HorizontalContentAlignment="Left"/>

                    <Button Content="ðŸ‘ï¸ Dettagli" 
                           Command="{Binding ViewDetailsCommand}"
                           Background="#9b59b6" 
                           Foreground="White" 
                           Padding="12,10" 
                           Margin="0,0,0,10"
                           FontSize="13"
                           BorderThickness="0"
                           Cursor="Hand"
                           HorizontalContentAlignment="Left"/>

                    <Button Content="ðŸ” Gestisci Permessi" 
                           Command="{Binding ViewPermissionsCommand}"
                           Background="#16a085" 
                           Foreground="White" 
                           Padding="12,10" 
                           Margin="0,0,0,10"
                           FontSize="13"
                           BorderThickness="0"
                           Cursor="Hand"
                           HorizontalContentAlignment="Left"/>

                    <Separator Margin="0,10,0,10"/>

                    <Button Content="âœ… Attiva" 
                           Command="{Binding ActivateUtenteCommand}"
                           Background="#27ae60" 
                           Foreground="White" 
                           Padding="12,10" 
                           Margin="0,0,0,10"
                           FontSize="13"
                           BorderThickness="0"
                           Cursor="Hand"
                           HorizontalContentAlignment="Left"/>

                    <Button Content="âŒ Disattiva" 
                           Command="{Binding DeleteUtenteCommand}"
                           Background="#e74c3c" 
                           Foreground="White" 
                           Padding="12,10" 
                           Margin="0,0,0,10"
                           FontSize="13"
                           BorderThickness="0"
                           Cursor="Hand"
                           HorizontalContentAlignment="Left"/>

                    <Separator Margin="0,10,0,10"/>

                    <Button Content="ðŸ” Mia Password" 
                           Command="{Binding ChangeMyPasswordCommand}"
                           Background="#34495e" 
                           Foreground="White" 
                           Padding="12,10" 
                           FontSize="13"
                           FontWeight="Bold"
                           BorderThickness="0"
                           Cursor="Hand"
                           HorizontalContentAlignment="Left"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>

