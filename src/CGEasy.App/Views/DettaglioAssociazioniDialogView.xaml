<Window x:Class="CGEasy.App.Views.DettaglioAssociazioniDialogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        Title="{Binding Titolo}"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SystemControlBackgroundAccentBrush}"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="ðŸ” Dettaglio Conti Contabili Associati" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock FontSize="14" Foreground="White" Opacity="0.9" Margin="0,5,0,0">
                    <Run Text="Voce Template: ["/>
                    <Run Text="{Binding CodiceVoce}" FontWeight="Bold"/>
                    <Run Text="] "/>
                    <Run Text="{Binding DescrizioneVoce}" FontWeight="SemiBold"/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Info -->
        <Border Grid.Row="1" 
                Background="White"
                CornerRadius="8"
                Padding="15"
                Margin="0,0,0,15"
                ui:ThemeManager.HasThemeResources="True">
            <ui:ThemeManager.RequestedTheme>
                <ui:ElementTheme>Light</ui:ElementTheme>
            </ui:ThemeManager.RequestedTheme>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸ‘¤ Cliente:" FontWeight="SemiBold" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding ClienteNome}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="ðŸ“… Periodo:" FontWeight="SemiBold" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding Periodo}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- DataGrid Conti (Mono-Periodo) -->
        <Border Grid.Row="2" 
                Background="White"
                CornerRadius="8"
                Padding="0"
                Visibility="{Binding IsMultiPeriodo, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                ui:ThemeManager.HasThemeResources="True">
            <ui:ThemeManager.RequestedTheme>
                <ui:ElementTheme>Light</ui:ElementTheme>
            </ui:ThemeManager.RequestedTheme>
            <DataGrid ItemsSource="{Binding ContiAssociati}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserResizeRows="False"
                      AlternatingRowBackground="#F5F5F5"
                      RowHeight="45"
                      FontSize="14">
                <DataGrid.Columns>
                    <!-- Codice Conto -->
                    <DataGridTextColumn Header="Codice Conto" 
                                       Binding="{Binding CodiceConto}" 
                                       Width="200">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Padding" Value="15,0"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="#2196F3"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Descrizione Conto -->
                    <DataGridTextColumn Header="Descrizione Conto" 
                                       Binding="{Binding DescrizioneConto}" 
                                       Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Padding" Value="15,0"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="TextWrapping" Value="Wrap"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Importo -->
                    <DataGridTextColumn Header="Importo" 
                                       Binding="{Binding ImportoFormatted}" 
                                       Width="150">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Padding" Value="15,0"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsNegativo}" Value="True">
                                        <Setter Property="Foreground" Value="#F44336"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- DataGrid Conti (Multi-Periodo) -->
        <Border Grid.Row="2" 
                Background="White"
                CornerRadius="8"
                Padding="0"
                Visibility="{Binding IsMultiPeriodo, Converter={StaticResource BooleanToVisibilityConverter}}"
                ui:ThemeManager.HasThemeResources="True">
            <ui:ThemeManager.RequestedTheme>
                <ui:ElementTheme>Light</ui:ElementTheme>
            </ui:ThemeManager.RequestedTheme>
            <DataGrid ItemsSource="{Binding ContiAssociatiConPeriodo}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserResizeRows="False"
                      AlternatingRowBackground="#F5F5F5"
                      RowHeight="45"
                      FontSize="14">
                <DataGrid.Columns>
                    <!-- Periodo -->
                    <DataGridTextColumn Header="Periodo" 
                                       Binding="{Binding Periodo}" 
                                       Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Padding" Value="15,0"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#FF9800"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Codice Conto -->
                    <DataGridTextColumn Header="Codice Conto" 
                                       Binding="{Binding CodiceConto}" 
                                       Width="150">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Padding" Value="15,0"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="#2196F3"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Descrizione Conto -->
                    <DataGridTextColumn Header="Descrizione Conto" 
                                       Binding="{Binding DescrizioneConto}" 
                                       Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Padding" Value="15,0"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="TextWrapping" Value="Wrap"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Importo -->
                    <DataGridTextColumn Header="Importo" 
                                       Binding="{Binding ImportoFormatted}" 
                                       Width="150">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Padding" Value="15,0"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsNegativo}" Value="True">
                                        <Setter Property="Foreground" Value="#F44336"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Footer Statistiche -->
        <Border Grid.Row="3" 
                Background="White"
                CornerRadius="8"
                Padding="20"
                Margin="0,15,0,15"
                ui:ThemeManager.HasThemeResources="True">
            <ui:ThemeManager.RequestedTheme>
                <ui:ElementTheme>Light</ui:ElementTheme>
            </ui:ThemeManager.RequestedTheme>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸ“Š Totale conti associati:" 
                               FontWeight="SemiBold" 
                               FontSize="14"
                               Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding TotaleConti}" 
                               FontWeight="Bold" 
                               FontSize="14"
                               Foreground="#2196F3"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="ðŸ’° Somma importi:" 
                               FontWeight="SemiBold" 
                               FontSize="14"
                               Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding SommaImportiFormatted}" 
                               FontWeight="Bold" 
                               FontSize="14"
                               Foreground="#4CAF50"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Buttons -->
        <Border Grid.Row="4"
                Background="White"
                CornerRadius="8"
                Padding="20"
                ui:ThemeManager.HasThemeResources="True">
            <ui:ThemeManager.RequestedTheme>
                <ui:ElementTheme>Light</ui:ElementTheme>
            </ui:ThemeManager.RequestedTheme>
            <Button Content="âœ… Chiudi" 
                    IsDefault="True"
                    Click="ChiudiButton_Click"
                    Padding="30,12"
                    FontSize="14"
                    MinWidth="150"
                    HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>

