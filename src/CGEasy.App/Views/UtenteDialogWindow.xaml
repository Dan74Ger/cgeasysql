<Window x:Class="CGEasy.App.Views.UtenteDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d" 
        Title="Gestione Utente" 
        Height="650" 
        Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#ecf0f1">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackPanel Grid.Row="0" Margin="0,0,0,25">
            <TextBlock x:Name="DialogTitle" 
                      Text="âž• Nuovo Utente" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Foreground="#2c3e50"/>
            <TextBlock Text="Compila tutti i campi per creare un nuovo utente" 
                      FontSize="13" 
                      Foreground="#7f8c8d" 
                      Margin="0,5,0,0"/>
        </StackPanel>

        <!-- FORM -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Username -->
                <TextBlock Text="Username *" 
                          FontSize="13" 
                          FontWeight="SemiBold" 
                          Foreground="#2c3e50" 
                          Margin="0,0,0,5"/>
                <TextBox x:Name="UsernameTextBox" 
                        Padding="12,10" 
                        FontSize="14"
                        IsEnabled="{Binding IsNewUser}"
                        Margin="0,0,0,15"/>

                <!-- Email -->
                <TextBlock Text="Email *" 
                          FontSize="13" 
                          FontWeight="SemiBold" 
                          Foreground="#2c3e50" 
                          Margin="0,0,0,5"/>
                <TextBox x:Name="EmailTextBox" 
                        Padding="12,10" 
                        FontSize="14"
                        Margin="0,0,0,15"/>

                <!-- Nome -->
                <TextBlock Text="Nome *" 
                          FontSize="13" 
                          FontWeight="SemiBold" 
                          Foreground="#2c3e50" 
                          Margin="0,0,0,5"/>
                <TextBox x:Name="NomeTextBox" 
                        Padding="12,10" 
                        FontSize="14"
                        Margin="0,0,0,15"/>

                <!-- Cognome -->
                <TextBlock Text="Cognome *" 
                          FontSize="13" 
                          FontWeight="SemiBold" 
                          Foreground="#2c3e50" 
                          Margin="0,0,0,5"/>
                <TextBox x:Name="CognomeTextBox" 
                        Padding="12,10" 
                        FontSize="14"
                        Margin="0,0,0,15"/>

                <!-- Ruolo -->
                <TextBlock Text="Ruolo *" 
                          FontSize="13" 
                          FontWeight="SemiBold" 
                          Foreground="#2c3e50" 
                          Margin="0,0,0,5"/>
                <ComboBox x:Name="RuoloComboBox" 
                         Padding="12,10" 
                         FontSize="14"
                         Margin="0,0,0,15">
                    <ComboBoxItem Content="ðŸ‘‘ Amministratore" Tag="Administrator"/>
                    <ComboBoxItem Content="â­ Utente Senior" Tag="UserSenior"/>
                    <ComboBoxItem Content="ðŸ‘¤ Utente" Tag="User" IsSelected="True"/>
                </ComboBox>

                <!-- Password (solo nuovo utente) -->
                <StackPanel x:Name="PasswordPanel" Visibility="Visible">
                    <TextBlock Text="Password *" 
                              FontSize="13" 
                              FontWeight="SemiBold" 
                              Foreground="#2c3e50" 
                              Margin="0,0,0,5"/>
                    <PasswordBox x:Name="PasswordBox" 
                                Padding="12,10" 
                                FontSize="14"
                                Margin="0,0,0,5"/>
                    <TextBlock Text="Minimo 6 caratteri" 
                              FontSize="11" 
                              Foreground="#95a5a6" 
                              Margin="0,0,0,15"/>
                </StackPanel>

                <!-- Attivo -->
                <CheckBox x:Name="AttivoCheckBox" 
                         Content="Utente Attivo" 
                         IsChecked="True"
                         FontSize="14"
                         FontWeight="SemiBold"
                         Margin="0,5,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- BUTTONS -->
        <Grid Grid.Row="2" Margin="0,25,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" 
                   Content="âŒ Annulla" 
                   Click="CancelButton_Click"
                   Background="#95a5a6" 
                   Foreground="White" 
                   Padding="15,12" 
                   FontSize="14" 
                   FontWeight="SemiBold"
                   BorderThickness="0"
                   Cursor="Hand"
                   Margin="0,0,10,0">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="Background" Value="#95a5a6"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7f8c8d"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Grid.Column="1" 
                   Content="âœ… Salva" 
                   Click="SaveButton_Click"
                   Background="#27ae60" 
                   Foreground="White" 
                   Padding="15,12" 
                   FontSize="14" 
                   FontWeight="SemiBold"
                   BorderThickness="0"
                   Cursor="Hand"
                   Margin="10,0,0,0">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="Background" Value="#27ae60"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#229954"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Grid>
</Window>






























