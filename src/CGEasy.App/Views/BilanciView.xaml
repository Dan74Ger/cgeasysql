<UserControl x:Class="CGEasy.App.Views.BilanciView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SystemControlBackgroundAccentBrush}"
                CornerRadius="12"
                Padding="30"
                Margin="0,0,0,30">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="üìä" FontSize="48" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <StackPanel>
                        <TextBlock Text="MODULO BILANCI" FontSize="32" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Gestione completa dei bilanci contabili" FontSize="16" Foreground="White" Opacity="0.9" Margin="0,5,0,0"/>
                    </StackPanel>
                </StackPanel>
                <TextBlock Foreground="White" 
                           Opacity="0.85"
                           TextWrapping="Wrap"
                           FontSize="13"
                           LineHeight="22">
                    Il modulo Bilanci ti permette di gestire bilanci contabili, creare template di riclassificazione, 
                    associare mastrini e visualizzare grafici interattivi.
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Cards Grid -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Card 1: Bilancio Contabile -->
            <Border Grid.Row="0" Grid.Column="0" 
                    x:Name="Card1"
                    Background="White"
                    CornerRadius="12"
                    Padding="20"
                    Margin="0,0,15,15"
                    Cursor="Hand"
                    ui:ThemeManager.HasThemeResources="True">
                <ui:ThemeManager.RequestedTheme>
                    <ui:ElementTheme>Light</ui:ElementTheme>
                </ui:ThemeManager.RequestedTheme>
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="4" BlurRadius="16" Opacity="0.3" Color="#2196F3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Border.InputBindings>
                    <MouseBinding Gesture="LeftClick" Command="{Binding OpenBilancioContabileCommand}"/>
                </Border.InputBindings>
                <StackPanel>
                    <Border Background="#2196F3" 
                            Width="60" Height="60" 
                            CornerRadius="30" 
                            HorizontalAlignment="Left"
                            Margin="0,0,0,12">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMouseOver, ElementName=Card1}" Value="True">
                                        <Setter Property="Background" Value="#1976D2"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="üìã" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Bilancio Contabile" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <TextBlock TextWrapping="Wrap" Foreground="Gray" FontSize="12" LineHeight="18">
                        Import mastrini da Excel, inserimento manuale, modifica ed eliminazione dati contabili. Export in Excel.
                    </TextBlock>
                    <Border Background="#4CAF50" CornerRadius="4" Padding="10,5" HorizontalAlignment="Center" Margin="0,12,0,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMouseOver, ElementName=Card1}" Value="True">
                                        <Setter Property="Background" Value="#2E7D32"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="‚úÖ DISPONIBILE" Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Card 2: Template Riclassificazione -->
            <Border Grid.Row="0" Grid.Column="1" 
                    x:Name="Card2"
                    Background="White"
                    CornerRadius="12"
                    Padding="20"
                    Margin="0,0,0,15"
                    Cursor="Hand"
                    ui:ThemeManager.HasThemeResources="True">
                <ui:ThemeManager.RequestedTheme>
                    <ui:ElementTheme>Light</ui:ElementTheme>
                </ui:ThemeManager.RequestedTheme>
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF3E0"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="4" BlurRadius="16" Opacity="0.3" Color="#FFA726"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Border.InputBindings>
                    <MouseBinding Gesture="LeftClick" Command="{Binding OpenTemplateCommand}"/>
                </Border.InputBindings>
                <StackPanel>
                    <Border Background="#FFA726" Width="60" Height="60" CornerRadius="30" HorizontalAlignment="Left" Margin="0,0,0,12">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMouseOver, ElementName=Card2}" Value="True">
                                        <Setter Property="Background" Value="#F57C00"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="üìÑ" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Template Riclassificazione" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <TextBlock TextWrapping="Wrap" Foreground="Gray" FontSize="12" LineHeight="18">
                        Crea template personalizzati per riclassificare i bilanci secondo le tue esigenze.
                    </TextBlock>
                    <Border Background="#4CAF50" CornerRadius="4" Padding="10,5" HorizontalAlignment="Center" Margin="0,12,0,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMouseOver, ElementName=Card2}" Value="True">
                                        <Setter Property="Background" Value="#2E7D32"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="‚úÖ DISPONIBILE" Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Card 3: Associazioni Mastrini -->
            <Border Grid.Row="1" Grid.Column="0" 
                    x:Name="Card3"
                    Background="White"
                    CornerRadius="12"
                    Padding="20"
                    Margin="0,0,15,15"
                    VerticalAlignment="Center"
                    Cursor="Hand"
                    ui:ThemeManager.HasThemeResources="True">
                <ui:ThemeManager.RequestedTheme>
                    <ui:ElementTheme>Light</ui:ElementTheme>
                </ui:ThemeManager.RequestedTheme>
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F3E5F5"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="4" BlurRadius="16" Opacity="0.3" Color="#AB47BC"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Border.InputBindings>
                    <MouseBinding Gesture="LeftClick" Command="{Binding OpenAssociazioniCommand}"/>
                </Border.InputBindings>
                <StackPanel>
                    <Border Background="#AB47BC" Width="60" Height="60" CornerRadius="30" HorizontalAlignment="Left" Margin="0,0,0,12">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMouseOver, ElementName=Card3}" Value="True">
                                        <Setter Property="Background" Value="#8E24AA"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="üîó" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Associazioni Mastrini" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <TextBlock TextWrapping="Wrap" Foreground="Gray" FontSize="12" LineHeight="18">
                        Associa mastrini contabili alle voci dei template di riclassificazione.
                    </TextBlock>
                    <Border Background="#4CAF50" CornerRadius="4" Padding="10,5" HorizontalAlignment="Center" Margin="0,12,0,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMouseOver, ElementName=Card3}" Value="True">
                                        <Setter Property="Background" Value="#2E7D32"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="‚úÖ DISPONIBILE" Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Card Grafici: affianco ad Associazioni -->
            <Border Grid.Row="1" Grid.Column="1" 
                    x:Name="CardGrafici"
                    Background="White"
                    CornerRadius="12"
                    Padding="20"
                    Margin="0,0,0,15"
                    VerticalAlignment="Center"
                    Cursor="Hand"
                    ui:ThemeManager.HasThemeResources="True">
                <ui:ThemeManager.RequestedTheme>
                    <ui:ElementTheme>Light</ui:ElementTheme>
                </ui:ThemeManager.RequestedTheme>
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFEBEE"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="4" BlurRadius="16" Opacity="0.3" Color="#F44336"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Border.InputBindings>
                    <MouseBinding Gesture="LeftClick" Command="{Binding OpenGraficiCommand}"/>
                </Border.InputBindings>
                <StackPanel>
                    <Border Background="#F44336" Width="60" Height="60" CornerRadius="30" HorizontalAlignment="Left" Margin="0,0,0,12">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMouseOver, ElementName=CardGrafici}" Value="True">
                                        <Setter Property="Background" Value="#D32F2F"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="üìà" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Grafici" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <TextBlock TextWrapping="Wrap" Foreground="Gray" FontSize="12" LineHeight="18">
                        Visualizza grafici e andamenti delle statistiche CE/SP salvate.
                    </TextBlock>
                    <Border Background="#4CAF50" CornerRadius="4" Padding="10,5" HorizontalAlignment="Center" Margin="0,12,0,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMouseOver, ElementName=CardGrafici}" Value="True">
                                        <Setter Property="Background" Value="#2E7D32"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="‚úÖ DISPONIBILE" Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Card 4: Statistiche CE -->
            <Border Grid.Row="2" Grid.Column="0" 
                    x:Name="Card4"
                    Background="White"
                    CornerRadius="12"
                    Padding="20"
                    Margin="0,0,15,15"
                    Cursor="Hand"
                    ui:ThemeManager.HasThemeResources="True">
                <ui:ThemeManager.RequestedTheme>
                    <ui:ElementTheme>Light</ui:ElementTheme>
                </ui:ThemeManager.RequestedTheme>
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E0F2F1"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="4" BlurRadius="16" Opacity="0.3" Color="#26A69A"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Border.InputBindings>
                    <MouseBinding Gesture="LeftClick" Command="{Binding OpenStatisticheCECommand}"/>
                </Border.InputBindings>
                <StackPanel>
                    <Border Background="#26A69A" Width="60" Height="60" CornerRadius="30" HorizontalAlignment="Left" Margin="0,0,0,12">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMouseOver, ElementName=Card4}" Value="True">
                                        <Setter Property="Background" Value="#00897B"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="üìä" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Statistiche CE" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <TextBlock TextWrapping="Wrap" Foreground="Gray" FontSize="12" LineHeight="18">
                        Statistiche e analisi avanzate Conto Economico riclassificato.
                    </TextBlock>
                    <Border Background="#4CAF50" CornerRadius="4" Padding="10,5" HorizontalAlignment="Center" Margin="0,12,0,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMouseOver, ElementName=Card4}" Value="True">
                                        <Setter Property="Background" Value="#2E7D32"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="‚úÖ DISPONIBILE" Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Card 5: Statistiche SP -->
            <Border Grid.Row="2" Grid.Column="1" 
                    x:Name="Card5"
                    Background="White"
                    CornerRadius="12"
                    Padding="20"
                    Margin="0,0,0,15"
                    Cursor="Hand"
                    ui:ThemeManager.HasThemeResources="True">
                <ui:ThemeManager.RequestedTheme>
                    <ui:ElementTheme>Light</ui:ElementTheme>
                </ui:ThemeManager.RequestedTheme>
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E1F5FE"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="4" BlurRadius="16" Opacity="0.3" Color="#0288D1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Border.InputBindings>
                    <MouseBinding Gesture="LeftClick" Command="{Binding OpenStatisticheSPCommand}"/>
                </Border.InputBindings>
                <StackPanel>
                    <Border Background="#0288D1" Width="60" Height="60" CornerRadius="30" HorizontalAlignment="Left" Margin="0,0,0,12">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMouseOver, ElementName=Card5}" Value="True">
                                        <Setter Property="Background" Value="#0277BD"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="üìä" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Statistiche SP" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <TextBlock TextWrapping="Wrap" Foreground="Gray" FontSize="12" LineHeight="18">
                        Statistiche e analisi avanzate Stato Patrimoniale riclassificato.
                    </TextBlock>
                    <Border Background="#4CAF50" CornerRadius="4" Padding="10,5" HorizontalAlignment="Center" Margin="0,12,0,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMouseOver, ElementName=Card5}" Value="True">
                                        <Setter Property="Background" Value="#2E7D32"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="‚úÖ DISPONIBILE" Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Card 6: Indici di Bilancio (NUOVA!) -->
            <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                    x:Name="CardIndici"
                    Background="White"
                    CornerRadius="12"
                    Padding="20"
                    Margin="0,0,0,0"
                    Cursor="Hand"
                    ui:ThemeManager.HasThemeResources="True">
                <ui:ThemeManager.RequestedTheme>
                    <ui:ElementTheme>Light</ui:ElementTheme>
                </ui:ThemeManager.RequestedTheme>
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF8E1"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="4" BlurRadius="16" Opacity="0.3" Color="#FFB300"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Border.InputBindings>
                    <MouseBinding Gesture="LeftClick" Command="{Binding OpenIndiciCommand}"/>
                </Border.InputBindings>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Column="0" Background="#FFB300" Width="80" Height="80" CornerRadius="40" HorizontalAlignment="Left" Margin="0,0,20,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMouseOver, ElementName=CardIndici}" Value="True">
                                        <Setter Property="Background" Value="#FFA000"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="üìê" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Indici di Bilancio" FontSize="20" FontWeight="Bold" Margin="0,0,0,8"/>
                        <TextBlock TextWrapping="Wrap" Foreground="Gray" FontSize="13" LineHeight="20">
                            Calcola indici di liquidit√†, solidit√†, redditivit√† ed efficienza. Crea indici personalizzati combinando voci CE e SP a tuo piacimento.
                        </TextBlock>
                        <Border Background="#4CAF50" CornerRadius="6" Padding="12,6" HorizontalAlignment="Left" Margin="0,15,0,0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver, ElementName=CardIndici}" Value="True">
                                            <Setter Property="Background" Value="#45A049"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="‚úÖ DISPONIBILE" Foreground="White" FontSize="11" FontWeight="Bold"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
