<Window x:Class="CGEasy.App.Views.ProfessionistaDialogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="{Binding WindowTitle}"
        Height="450" Width="600"
        MinHeight="400" MinWidth="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="0" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="30,20">
            <StackPanel>
                <!-- Titolo -->
                <TextBlock Text="{Binding WindowTitle}" 
                           FontSize="24" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,25"/>

                <!-- DATI ANAGRAFICI -->
                <Border Background="White"
                        CornerRadius="8"
                        Padding="25"
                        Margin="0,0,0,15"
                        ui:ThemeManager.HasThemeResources="True">
                    <ui:ThemeManager.RequestedTheme>
                        <ui:ElementTheme>Light</ui:ElementTheme>
                    </ui:ThemeManager.RequestedTheme>
                    <StackPanel>
                        <TextBlock Text="ðŸ‘” Dati Professionista" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,15"/>

                        <!-- Nome -->
                        <TextBlock Text="Nome *" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Professionista.Nome, UpdateSourceTrigger=PropertyChanged}"
                                 ui:ControlHelper.PlaceholderText="Inserisci il nome"
                                 Height="36"
                                 Margin="0,0,0,15"/>

                        <!-- Cognome -->
                        <TextBlock Text="Cognome *" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Professionista.Cognome, UpdateSourceTrigger=PropertyChanged}"
                                 ui:ControlHelper.PlaceholderText="Inserisci il cognome"
                                 Height="36"
                                 Margin="0,0,0,0"/>
                    </StackPanel>
                </Border>

                <!-- STATO -->
                <Border Background="White"
                        CornerRadius="8"
                        Padding="25"
                        Margin="0,0,0,0"
                        ui:ThemeManager.HasThemeResources="True">
                    <ui:ThemeManager.RequestedTheme>
                        <ui:ElementTheme>Light</ui:ElementTheme>
                    </ui:ThemeManager.RequestedTheme>
                    <StackPanel>
                        <TextBlock Text="âš™ï¸ Stato" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,15"/>

                        <!-- Checkbox Attivo -->
                        <CheckBox Content="Professionista Attivo" 
                                  IsChecked="{Binding Professionista.Attivo}"
                                  FontWeight="SemiBold"/>
                        <TextBlock Text="I professionisti attivi vengono inclusi nelle operazioni e assegnazioni"
                                   Foreground="Gray"
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   Margin="26,5,0,0"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="1" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,1,0,0"
                Background="#F5F5F5"
                Padding="30,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Info Required Fields -->
                <TextBlock Grid.Column="0"
                           Text="* Campi obbligatori"
                           Foreground="Gray"
                           FontSize="12"
                           VerticalAlignment="Center"/>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <Button Content="âœ– Annulla" 
                            Click="CancelButton_Click"
                            Height="36"
                            Width="110"
                            Margin="0,0,10,0"/>
                    
                    <Button Content="âœ“ Salva" 
                            Click="SaveButton_Click"
                            Style="{StaticResource AccentButtonStyle}"
                            Height="36"
                            Width="110"
                            FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>

