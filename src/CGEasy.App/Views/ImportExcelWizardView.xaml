<Window x:Class="CGEasy.App.Views.ImportExcelWizardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="ðŸ“‚ Import Bilancio da Excel"
        Height="700"
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinHeight="650"
        MinWidth="850"
        Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SystemControlBackgroundAccentBrush}"
                CornerRadius="8" Padding="20" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ“‚" FontSize="28" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <StackPanel>
                    <TextBlock Text="IMPORT BILANCIO DA EXCEL" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                    <TextBlock Text="Importa mastrini contabili da file Excel" FontSize="11" 
                               Foreground="White" Opacity="0.9" Margin="0,3,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Form -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Colonna Sinistra -->
            <StackPanel Grid.Column="0">
                <!-- Info formato -->
                <Border Background="#E3F2FD" CornerRadius="6" Padding="15" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="â„¹ï¸ FORMATO FILE EXCEL:" FontWeight="SemiBold" Foreground="#1976D2" Margin="0,0,0,10" FontSize="13"/>
                        <TextBlock TextWrapping="Wrap" Foreground="#424242" LineHeight="20" FontSize="12">
                            <Run Text="â€¢ Prima riga: intestazioni"/><LineBreak/>
                            <Run Text="â€¢ Colonna A: Codice (es: 01.001)"/><LineBreak/>
                            <Run Text="â€¢ Colonna B: Descrizione"/><LineBreak/>
                            <Run Text="â€¢ Colonna C: Importo"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Step 1: Cliente -->
                <TextBlock Text="ðŸ¢ STEP 1: Cliente" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                <ComboBox x:Name="ClienteComboBox"
                          DisplayMemberPath="NomeCliente"
                          ui:ControlHelper.PlaceholderText="Seleziona cliente..."
                          Height="40"
                          Margin="0,0,0,20"/>

                <!-- Step 2: Periodo -->
                <TextBlock Text="ðŸ“… STEP 2: Periodo" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Mese:" FontSize="12" Margin="0,0,0,5"/>
                        <ComboBox x:Name="MeseComboBox" 
                                  Height="40"
                                  SelectedIndex="0">
                            <ComboBoxItem Content="01 - Gennaio"/>
                            <ComboBoxItem Content="02 - Febbraio"/>
                            <ComboBoxItem Content="03 - Marzo"/>
                            <ComboBoxItem Content="04 - Aprile"/>
                            <ComboBoxItem Content="05 - Maggio"/>
                            <ComboBoxItem Content="06 - Giugno"/>
                            <ComboBoxItem Content="07 - Luglio"/>
                            <ComboBoxItem Content="08 - Agosto"/>
                            <ComboBoxItem Content="09 - Settembre"/>
                            <ComboBoxItem Content="10 - Ottobre"/>
                            <ComboBoxItem Content="11 - Novembre"/>
                            <ComboBoxItem Content="12 - Dicembre"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Anno:" FontSize="12" Margin="0,0,0,5"/>
                        <TextBox x:Name="AnnoTextBox" 
                                 ui:ControlHelper.PlaceholderText="Anno"
                                 Height="40"
                                 VerticalContentAlignment="Center"
                                 MaxLength="4"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- Colonna Destra -->
            <StackPanel Grid.Column="2">
                <!-- Step 3: Descrizione -->
                <TextBlock Text="ðŸ“ STEP 3: Descrizione Bilancio" FontWeight="SemiBold" FontSize="14" Margin="0,145,0,10"/>
                <TextBox x:Name="DescrizioneTextBox"
                         ui:ControlHelper.PlaceholderText="es: Bilancio Gennaio 2025"
                         Height="40"
                         VerticalContentAlignment="Center"
                         Margin="0,0,0,20"/>

                <!-- Step 3b: Tipo Bilancio -->
                <TextBlock Text="ðŸ“Š Tipo Bilancio" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                <ComboBox x:Name="TipoBilancioComboBox"
                          Height="40"
                          SelectedIndex="0"
                          Margin="0,0,0,20">
                    <ComboBoxItem Content="CE - Conto Economico" Tag="CE"/>
                    <ComboBoxItem Content="SP - Stato Patrimoniale" Tag="SP"/>
                </ComboBox>

                <!-- Step 4: Selezione File -->
                <TextBlock Text="ðŸ“„ STEP 4: File Excel" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox x:Name="FilePathTextBox" 
                             Grid.Column="0"
                             IsReadOnly="True"
                             ui:ControlHelper.PlaceholderText="Nessun file selezionato"
                             Height="40"
                             VerticalContentAlignment="Center"
                             Margin="0,0,10,0"/>
                    <Button x:Name="SelectFileButton"
                            Grid.Column="1"
                            Content="ðŸ“‚ Sfoglia"
                            Click="SelectFileButton_Click"
                            Padding="15,8"
                            Height="40"
                            MinWidth="110"/>
                </Grid>
                
                <TextBlock x:Name="FileSizeTextBlock" 
                           Visibility="Collapsed"
                           FontSize="11" 
                           Foreground="Gray" 
                           Margin="0,-15,0,20"/>

                <!-- Avviso -->
                <Border Background="#FFF3E0" CornerRadius="6" Padding="15" Margin="0,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âš ï¸" FontSize="18" VerticalAlignment="Top" Margin="0,0,10,0"/>
                        <TextBlock TextWrapping="Wrap" Foreground="#E65100" FontSize="11" LineHeight="18">
                            <Run Text="Se esistono giÃ  dati per questo Cliente/Periodo, ti verrÃ  chiesto se sostituirli."/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Buttons -->
        <Border Grid.Row="2" BorderThickness="0,1,0,0" BorderBrush="#E0E0E0" Padding="0,15,0,0" Margin="0,15,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CancelButton"
                        Content="âŒ Annulla" 
                        Click="CancelButton_Click"
                        Padding="15,8" 
                        Margin="0,0,10,0"
                        MinWidth="110"/>
                <Button x:Name="ImportButton"
                        Content="ðŸ“‚ Importa" 
                        Click="ImportButton_Click"
                        Style="{StaticResource AccentButtonStyle}"
                        Padding="15,8"
                        MinWidth="110"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

