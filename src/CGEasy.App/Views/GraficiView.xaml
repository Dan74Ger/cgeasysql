<UserControl x:Class="CGEasy.App.Views.GraficiView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
             Background="White">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SystemControlBackgroundAccentBrush}"
                CornerRadius="12"
                Padding="30"
                Margin="0,0,0,30">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="ðŸ“ˆ" FontSize="48" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <StackPanel>
                        <TextBlock Text="Grafici" FontSize="32" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Visualizza grafici e andamenti delle statistiche CE/SP salvate" FontSize="14" Foreground="White" Opacity="0.9" Margin="0,5,0,0"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Pannello Filtri -->
        <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="25" Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Row 1: Cliente, Tipo Statistica, Statistica Salvata -->
                <StackPanel Grid.Row="0" Grid.Column="0">
                    <TextBlock Text="ðŸ‘¤ Cliente:" FontWeight="SemiBold" Margin="0,0,0,8" FontSize="13"/>
                    <ComboBox ItemsSource="{Binding Clienti}"
                              SelectedItem="{Binding ClienteSelezionato}"
                              DisplayMemberPath="NomeCliente"
                              FontSize="13"
                              Padding="12,10"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="2">
                    <TextBlock Text="ðŸ“Š Tipo Statistica:" FontWeight="SemiBold" Margin="0,0,0,8" FontSize="13"/>
                    <ComboBox ItemsSource="{Binding TipiStatistica}"
                              SelectedItem="{Binding TipoStatisticaSelezionato}"
                              FontSize="13"
                              Padding="12,10"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="4">
                    <TextBlock Text="ðŸ“‚ Statistica Salvata:" FontWeight="SemiBold" Margin="0,0,0,8" FontSize="13"/>
                    <ComboBox ItemsSource="{Binding StatisticheSalvate}"
                              SelectedItem="{Binding StatisticaSelezionata}"
                              DisplayMemberPath="NomeStatistica"
                              FontSize="13"
                              Padding="12,10"/>
                </StackPanel>

                <!-- Row 2: Selezione Voci (Multi-select con Expander) -->
                <Expander Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" 
                          Margin="0,20,0,0"
                          IsExpanded="True"
                          Background="#F5F5F5"
                          BorderBrush="#E0E0E0"
                          BorderThickness="1">
                    <Expander.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“‹ Voci da Visualizzare (seleziona una o piÃ¹)" 
                                       FontWeight="SemiBold" 
                                       FontSize="13" 
                                       VerticalAlignment="Center"
                                       Margin="5,0,15,0"/>
                            <Button Content="ðŸ”„ Pulisci Filtri" 
                                    Command="{Binding PulisciFiltriCommand}"
                                    Style="{StaticResource DefaultButtonStyle}"
                                    Padding="8,4"
                                    FontSize="11"/>
                        </StackPanel>
                    </Expander.Header>
                    <Border Background="White" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1" 
                            MaxHeight="150"
                            Margin="10">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding VociDisponibili}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Descrizione}" 
                                                  IsChecked="{Binding IsSelezionata}"
                                                  Margin="10,5"
                                                  FontSize="12"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </Expander>

                <!-- Row 3: Tipo Grafico e Toggle Valori/Percentuali -->
                <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,20,0,0">
                    <TextBlock Text="ðŸ“ˆ Tipo Grafico:" FontWeight="SemiBold" Margin="0,0,0,8" FontSize="13"/>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton Content="ðŸ“ˆ Andamento (Linee)" 
                                     IsChecked="{Binding IsGraficoLinee}"
                                     GroupName="TipoGrafico"
                                     Margin="0,0,20,0"
                                     FontSize="12"/>
                        <RadioButton Content="ðŸ¥§ Composizione (Torta)" 
                                     IsChecked="{Binding IsGraficoTorta}"
                                     GroupName="TipoGrafico"
                                     FontSize="12"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,20,0,0" VerticalAlignment="Bottom">
                    <TextBlock Text="ðŸ’° Visualizzazione:" FontWeight="SemiBold" Margin="0,0,0,8" FontSize="13"/>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton Content="â‚¬ Valori Assoluti" 
                                     IsChecked="{Binding MostraValoriAssoluti}"
                                     GroupName="Visualizzazione"
                                     Margin="0,0,20,0"
                                     FontSize="12"/>
                        <RadioButton Content="% Percentuali" 
                                     IsChecked="{Binding MostraPercentuali}"
                                     GroupName="Visualizzazione"
                                     FontSize="12"/>
                    </StackPanel>
                    <CheckBox Content="ðŸ”¢ Mostra Valori sul Grafico"
                              IsChecked="{Binding MostraValoriSulGrafico}"
                              Margin="0,10,0,0"
                              FontSize="12"
                              FontWeight="SemiBold"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="4" Margin="0,20,0,0" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                    <Button Content="ðŸ“Š Genera Grafico" 
                            Command="{Binding GeneraGraficoCommand}"
                            Background="#FF9800" 
                            Foreground="White"
                            Padding="25,12" 
                            FontSize="14" 
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F57C00"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Area Grafico -->
        <Border Grid.Row="2" Background="White" CornerRadius="12" Padding="25">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
            </Border.Effect>
            <Grid>
                <!-- Controllo WpfPlot di ScottPlot per LINEE -->
                <ScottPlot:WpfPlot x:Name="WpfPlot1" 
                                   Visibility="{Binding VisibilitaGraficoLinee}"/>

                <!-- Controllo WpfPlot di ScottPlot per TORTA -->
                <ScottPlot:WpfPlot x:Name="WpfPlot2" 
                                   Visibility="{Binding VisibilitaGraficoTorta}"/>

                <!-- Messaggio vuoto -->
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                            Visibility="{Binding VisibilitaMessaggioVuoto}">
                    <TextBlock Text="ðŸ“Š" FontSize="64" HorizontalAlignment="Center" Opacity="0.3"/>
                    <TextBlock Text="Seleziona i filtri e premi 'Genera Grafico'" 
                               FontSize="16" 
                               Foreground="Gray" 
                               HorizontalAlignment="Center"
                               Margin="0,15,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
