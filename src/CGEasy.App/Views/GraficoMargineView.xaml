<Window x:Class="CGEasy.App.Views.GraficoMargineView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:scottplot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        Title="ðŸ“Š Grafico Andamento Margine di Tesoreria"
        Width="1400" Height="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Pannello Filtri -->
        <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,20"
                BorderBrush="#DDDDDD" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Titolo Filtri -->
                <TextBlock Grid.Row="0" Text="ðŸ” Filtri Visualizzazione" FontSize="18" FontWeight="Bold" 
                           Foreground="#333333" Margin="0,0,0,15"/>

                <!-- Filtro VOCI -->
                <StackPanel Grid.Row="1" Margin="0,0,0,15">
                    <TextBlock Text="ðŸ“Š Voci da Visualizzare:" FontWeight="SemiBold" FontSize="14" 
                               Foreground="#555555" Margin="0,0,0,10"/>
                    <WrapPanel Orientation="Horizontal">
                        <CheckBox Content="Saldo Corrente" IsChecked="{Binding MostraSaldoCorrente}" 
                                  Foreground="#00BFFF" FontWeight="SemiBold" Margin="0,0,20,5"/>
                        <CheckBox Content="Saldo Disponibile" IsChecked="{Binding MostraSaldoDisponibile}" 
                                  Foreground="#0000FF" FontWeight="SemiBold" Margin="0,0,20,5"/>
                        <CheckBox Content="Fatturato Anticipato" IsChecked="{Binding MostraFatturatoAnticipato}" 
                                  Foreground="#800080" FontWeight="SemiBold" Margin="0,0,20,5"/>
                        <CheckBox Content="Residuo Anticipabile" IsChecked="{Binding MostraResiduoAnticipabile}" 
                                  Foreground="#FFA500" FontWeight="SemiBold" Margin="0,0,20,5"/>
                        <CheckBox Content="Incassi" IsChecked="{Binding MostraIncassi}" 
                                  Foreground="#008000" FontWeight="SemiBold" Margin="0,0,20,5"/>
                        <CheckBox Content="Pagamenti" IsChecked="{Binding MostraPagamenti}" 
                                  Foreground="#FF0000" FontWeight="SemiBold" Margin="0,0,20,5"/>
                        <CheckBox Content="Utilizzo Fido C/C" IsChecked="{Binding MostraUtilizzoFido}" 
                                  Foreground="#8B0000" FontWeight="SemiBold" Margin="0,0,20,5"/>
                    </WrapPanel>
                </StackPanel>

                <!-- Filtro BANCHE -->
                <StackPanel Grid.Row="2" Orientation="Horizontal">
                    <TextBlock Text="ðŸ¦ Banca:" FontWeight="SemiBold" FontSize="14" 
                               Foreground="#555555" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox ItemsSource="{Binding BancheDisponibili}" 
                              SelectedItem="{Binding BancaSelezionata}"
                              MinWidth="200" FontSize="13" Padding="8,5"/>
                    
                    <!-- Pulsante Mostra/Nascondi Valori -->
                    <CheckBox Content="ðŸ“Š Mostra Valori" IsChecked="{Binding MostraValori}"
                              FontWeight="SemiBold" FontSize="13" Foreground="#2C3E50"
                              Margin="30,0,0,0" VerticalAlignment="Center"
                              ToolTip="Mostra o nascondi i valori numerici sul grafico"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Grafico -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="15"
                BorderBrush="#DDDDDD" BorderThickness="1">
            <scottplot:WpfPlot x:Name="WpfPlot"/>
        </Border>
    </Grid>
</Window>
