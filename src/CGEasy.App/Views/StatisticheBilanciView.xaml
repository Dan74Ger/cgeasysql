<UserControl x:Class="CGEasy.App.Views.StatisticheBilanciView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:vm="clr-namespace:CGEasy.App.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1600"
             Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SystemControlBackgroundAccentBrush}"
                CornerRadius="12"
                Padding="30"
                Margin="0,0,0,30">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="ðŸ“Š" FontSize="48" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <StackPanel>
                        <TextBlock Text="STATISTICHE BILANCI MULTI-PERIODO" FontSize="32" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Confronta piÃ¹ bilanci contabili contemporaneamente" FontSize="16" Foreground="White" Opacity="0.9" Margin="0,5,0,0"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Filtri e Azioni -->
        <Border Grid.Row="1" 
                Background="White"
                CornerRadius="8"
                Padding="25"
                Margin="0,0,0,20"
                ui:ThemeManager.HasThemeResources="True">
            <ui:ThemeManager.RequestedTheme>
                <ui:ElementTheme>Light</ui:ElementTheme>
            </ui:ThemeManager.RequestedTheme>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Riga 1: Cliente e Template -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Cliente -->
                    <StackPanel Grid.Column="0" Margin="0,0,15,0">
                        <TextBlock Text="ðŸ‘¤ Cliente" FontWeight="SemiBold" Margin="0,0,0,8" FontSize="14"/>
                        <ComboBox ItemsSource="{Binding Clienti}"
                                  SelectedItem="{Binding ClienteSelezionato}"
                                  DisplayMemberPath="NomeCliente"
                                  Padding="12"
                                  FontSize="14"/>
                    </StackPanel>

                    <!-- Template -->
                    <StackPanel Grid.Column="1" Margin="15,0,0,0">
                        <TextBlock Text="ðŸ“‹ Template" FontWeight="SemiBold" Margin="0,0,0,8" FontSize="14"/>
                        <ComboBox ItemsSource="{Binding TemplateDisponibili}"
                                  SelectedItem="{Binding TemplateSelezionato}"
                                  Padding="12"
                                  FontSize="14">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding PeriodoCompleto}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding DescrizioneBilancio}" Foreground="#666" FontSize="12"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <!-- Riga 2: Selezione Bilanci Multi-Periodo (con Checkbox) -->
                <StackPanel Grid.Row="1" Margin="0,0,0,15">
                    <TextBlock Text="ðŸ“… Seleziona Bilanci (puoi selezionare piÃ¹ periodi)" FontWeight="SemiBold" Margin="0,0,0,8" FontSize="14"/>
                    
                    <!-- Scrollable area con checkbox per ogni bilancio -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="150" HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding BilanciDisponibili}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding PeriodoDisplay}"
                                              IsChecked="{Binding IsSelected}"
                                              Margin="0,0,20,10"
                                              FontSize="13"
                                              Padding="5,2"
                                              ToolTip="{Binding PeriodoDisplay}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- Riepilogo bilanci selezionati -->
                    <Border BorderBrush="#E0E0E0" 
                            BorderThickness="1" 
                            CornerRadius="4" 
                            Padding="10" 
                            Margin="0,10,0,0"
                            Background="#F9F9F9"
                            Visibility="{Binding HasBilanciSelezionati, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="âœ… Bilanci Selezionati:" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding BilanciSelezionatiDisplay}" 
                                       FontSize="12" 
                                       TextWrapping="Wrap"
                                       Foreground="#2196F3"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Riga 3: Bottoni -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="ðŸ“Š Genera Statistiche" 
                            Command="{Binding GeneraStatisticheCommand}"
                            Style="{StaticResource AccentButtonStyle}"
                            Padding="25,12"
                            Margin="0,0,15,0"
                            FontSize="14"
                            FontWeight="SemiBold"
                            MinWidth="180"/>
                    <Button Content="ðŸ“„ Esporta Excel" 
                            Command="{Binding EsportaExcelCommand}"
                            Padding="25,12"
                            FontSize="14"
                            MinWidth="150"
                            IsEnabled="{Binding HasStatistiche}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- DataGrid Statistiche -->
        <Border Grid.Row="2" 
                Background="White"
                CornerRadius="8"
                Padding="0"
                ui:ThemeManager.HasThemeResources="True">
            <ui:ThemeManager.RequestedTheme>
                <ui:ElementTheme>Light</ui:ElementTheme>
            </ui:ThemeManager.RequestedTheme>
            
            <Grid>
                <!-- Loading Overlay -->
                <Border Background="#80FFFFFF" 
                        Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Panel.ZIndex="999">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ui:ProgressRing IsActive="True" Width="60" Height="60"/>
                        <TextBlock Text="Generazione statistiche..." 
                                   FontSize="16" 
                                   Margin="0,20,0,0"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Empty State -->
                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Visibility="{Binding HasStatistiche, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                    <TextBlock Text="ðŸ“Š" FontSize="64" HorizontalAlignment="Center" Opacity="0.3"/>
                    <TextBlock Text="Nessuna statistica generata" 
                               FontSize="18" 
                               Foreground="Gray"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,10"/>
                    <TextBlock Text="Seleziona Cliente, uno o piÃ¹ Bilanci e Template, poi clicca su 'Genera Statistiche'" 
                               FontSize="14" 
                               Foreground="Gray"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               MaxWidth="400"/>
                </StackPanel>

                <!-- DataGrid Dinamico (colonne generate nel code-behind) -->
                <DataGrid x:Name="StatisticheDataGrid"
                          ItemsSource="{Binding StatisticheMulti}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserResizeRows="False"
                          AlternatingRowBackground="#F5F5F5"
                          RowHeight="50"
                          FontSize="13"
                          Visibility="{Binding HasStatistiche, Converter={StaticResource BooleanToVisibilityConverter}}">
                    
                    <!-- Le colonne verranno generate dinamicamente nel code-behind -->
                    
                    <!-- Style per righe con formula -->
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasFormula}" Value="True">
                                    <Setter Property="Background" Value="#E3F2FD"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
