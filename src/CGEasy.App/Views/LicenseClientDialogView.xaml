<Window x:Class="CGEasy.App.Views.LicenseClientDialogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="Cliente Licenza" 
        Height="500" Width="600"
        MinHeight="500" MinWidth="600"
        WindowStartupLocation="CenterScreen"
        ui:WindowHelper.UseModernWindowStyle="True"
        Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Dati Cliente Licenza" 
                   FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Nome Cliente -->
                <TextBlock Text="Nome Cliente / Azienda *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding NomeCliente, UpdateSourceTrigger=PropertyChanged}"
                         ui:ControlHelper.PlaceholderText="Es: Studio Commercialista Rossi"
                         Height="36" Margin="0,0,0,15"/>

                <!-- Email -->
                <TextBlock Text="Email" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                         ui:ControlHelper.PlaceholderText="email@esempio.it"
                         Height="36" Margin="0,0,0,15"/>

                <!-- Telefono -->
                <TextBlock Text="Telefono" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Telefono, UpdateSourceTrigger=PropertyChanged}"
                         ui:ControlHelper.PlaceholderText="+39 123 4567890"
                         Height="36" Margin="0,0,0,15"/>

                <!-- Partita IVA -->
                <TextBlock Text="Partita IVA / Codice Fiscale" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding PartitaIva, UpdateSourceTrigger=PropertyChanged}"
                         ui:ControlHelper.PlaceholderText="IT12345678901"
                         Height="36" Margin="0,0,0,15"/>

                <!-- Note -->
                <TextBlock Text="Note" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Note, UpdateSourceTrigger=PropertyChanged}"
                         ui:ControlHelper.PlaceholderText="Note aggiuntive..."
                         Height="80" TextWrapping="Wrap" AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto" Margin="0,0,0,15"/>

                <!-- Attivo -->
                <CheckBox Content="Cliente Attivo" IsChecked="{Binding IsActive}"
                          FontWeight="SemiBold" Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="ðŸ’¾ Salva" Click="SaveButton_Click"
                    Width="120" Height="40" Margin="0,0,10,0"
                    Background="#4CAF50" Foreground="White" FontWeight="SemiBold"/>
            <Button Content="âŒ Annulla" Click="CancelButton_Click"
                    Width="120" Height="40"
                    Background="#F44336" Foreground="White" FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</Window>


